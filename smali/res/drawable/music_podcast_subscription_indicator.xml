<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_checked="false">
        <bitmap android:src="@drawable/ic_add_24" android:tint="?button_primary_foreground" />
    </item>
    <item android:state_enabled="true" android:state_checked="true">
        <bitmap android:src="@drawable/ic_done_24" android:tint="?button_secondary_foreground" />
    </item>
    <item android:state_checked="false">
        <bitmap android:src="@drawable/ic_add_24" android:tint="?button_primary_foreground_disabled" />
    </item>
    <item android:state_checked="true">
        <bitmap android:src="@drawable/ic_done_24" android:tint="?button_secondary_foreground_disabled" />
    </item>
</selector>