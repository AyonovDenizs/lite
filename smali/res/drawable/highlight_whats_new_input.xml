<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="#33999999">
            <item android:id="@android:id/mask">
                <layer-list>
                    <item>
                        <shape>
                            <solid android:color="#ff000000" />
                            <corners android:radius="8.0dip" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item android:id="@android:id/background" android:drawable="@drawable/posting_input_background" />
        </ripple>
    </item>
    <item android:drawable="@drawable/posting_input_background" />
</selector>