<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_list_selector"
    android:paddingLeft="12.0dip"
    android:paddingTop="12.0dip"
    android:paddingRight="12.0dip"
    android:paddingBottom="12.0dip">

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/photo"
        android:layout_width="128.0dip"
        android:layout_height="128.0dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16.0dip"
        app:placeholderImage="@drawable/group_placeholder"
        app:placeholderImageScaleType="fitXY" />

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/photo"
        android:layout_marginTop="17.0dip"
        android:layout_toRightOf="@id/photo"
        android:drawablePadding="10.0dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?text_muted"
        android:textSize="18.0sp" />

    <TextView
        android:id="@id/subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_marginTop="4.5dip"
        android:singleLine="false"
        android:textColor="?text_secondary"
        android:textSize="14.0sp" />

    <com.vk.core.view.TintTextView
        android:id="@id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:layout_alignLeft="@id/subtitle"
        android:layout_marginTop="4.5dip"
        android:singleLine="false"
        android:textColor="?text_secondary"
        android:textSize="14.0sp" />

    <com.vtosters.lite.ui.BadooTextView
        android:id="@id/action"
        android:layout_width="wrap_content"
        android:layout_height="32.0dip"
        android:layout_below="@id/info"
        android:layout_marginLeft="-10.5dip"
        android:layout_marginTop="10.0dip"
        android:layout_toRightOf="@id/photo"
        android:background="@drawable/rounded_list_selector"
        android:drawablePadding="4.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="@string/send_a_gift"
        android:textColor="?accent"
        android:textSize="14.0sp"
        app:typeface="Medium" />

    <ImageView style="@style/Online.Big" />
</RelativeLayout>