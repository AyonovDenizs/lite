<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/playlist_blocked_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/music_restriction_image"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_marginTop="24.0dip"
        app:layout_constraintBottom_toTopOf="@id/music_restriction_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@id/music_restriction_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="24.0dip"
        android:gravity="center_horizontal"
        android:minHeight="24.0dip"
        android:textColor="?text_primary"
        android:textSize="20.0sp"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toTopOf="@id/music_restriction_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_restriction_image"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginBottom="24.0dip" />

    <TextView
        android:id="@id/music_restriction_content"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="24.0dip"
        android:gravity="center_horizontal"
        android:minHeight="18.0dip"
        android:textColor="?text_secondary"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toTopOf="@id/music_restriction_action_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_restriction_title"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginBottom="24.0dip" />

    <TextView
        android:id="@id/music_restriction_action_button"
        style="@style/VKUIButton.Primary"
        android:layout_width="0.0dip"
        android:layout_height="36.0dip"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="24.0dip"
        android:layout_marginEnd="24.0dip"
        android:layout_marginBottom="24.0dip"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:textSize="15.0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_restriction_content"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginBottom="24.0dip" />
</androidx.constraintlayout.widget.ConstraintLayout>