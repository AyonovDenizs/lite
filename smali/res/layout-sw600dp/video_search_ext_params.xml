<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/search_extended"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?background_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="32.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="32.0dip"
        android:paddingBottom="24.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.vtosters.lite.ui.BadooTextView
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:gravity="center_vertical"
                android:text="@string/video_search_duration"
                android:textColor="?text_tertiary"
                android:textSize="14.0dip"
                app:typeface="Medium" />

            <Spinner
                android:id="@id/duration_spinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left" />

            <com.vtosters.lite.ui.BadooTextView
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:gravity="center_vertical"
                android:text="@string/video_search_sort"
                android:textColor="?text_tertiary"
                android:textSize="14.0dip"
                app:typeface="Medium" />

            <Spinner
                android:id="@id/sort_spinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <CheckBox
                android:id="@id/hd_only"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/video_hd_only"
                android:textColor="?text_primary"
                android:textSize="14.0dip" />

            <CheckBox
                android:id="@id/safe_search"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:checked="true"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/sett_safe_search"
                android:textColor="?text_primary"
                android:textSize="14.0dip" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>