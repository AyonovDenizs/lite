<?xml version="1.0" encoding="utf-8"?>
<com.vtosters.lite.ui.FullWidthLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_marginLeft="14.0dip"
        android:layout_marginRight="16.0dip">

        <ImageView
            android:id="@id/leftmenu_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center"
            android:src="@drawable/ic_user_24" />

        <TextView
            android:id="@id/leftmenu_counter2"
            android:layout_width="wrap_content"
            android:layout_height="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4.0dip"
            android:background="@drawable/left_notify_tablet_collapsed"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:minWidth="20.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:textColor="?counter_primary_text"
            android:textSize="12.0sp" />

        <View
            android:id="@id/leftmenu_icon_new_badge"
            android:layout_width="8.0dip"
            android:layout_height="8.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12.0dip"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/left_menu_new_icon_bg"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@id/leftmenu_text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.0dip"
        android:layout_weight="1.0"
        android:fontFamily="@string/font_family_medium"
        android:singleLine="true"
        android:textColor="?tabbar_tablet_text_primary"
        android:textSize="14.0sp" />

    <TextView
        android:id="@id/leftmenu_new_badge"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:layout_marginRight="26.0dip"
        android:background="@drawable/left_menu_new_bg"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:paddingLeft="8.0dip"
        android:paddingTop="3.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:singleLine="true"
        android:text="@string/new_badge"
        android:textColor="?counter_secondary_text"
        android:textSize="13.0sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@id/layout_qr_button_container"
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:background="@drawable/highlight"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24.0dip"
            android:layout_gravity="center"
            android:background="@drawable/bg_my_vk_pay_qr"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:paddingLeft="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:singleLine="true"
            android:text="@string/my_qr_code"
            android:textColor="?counter_primary_text"
            android:textSize="13.0sp" />
    </FrameLayout>

    <TextView
        android:id="@id/leftmenu_counter"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:layout_marginRight="26.0dip"
        android:background="@drawable/left_notify"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:minWidth="24.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:singleLine="true"
        android:textColor="?counter_primary_text"
        android:textSize="14.0sp" />
</com.vtosters.lite.ui.FullWidthLinearLayout>