<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/music_promo_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@id/image"
        android:layout_width="327.0dip"
        android:layout_height="450.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@id/layout_container"
        android:layout_width="327.0dip"
        android:layout_height="450.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72.0dip"
        android:paddingLeft="30.0dip"
        android:paddingTop="65.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#ffffffff"
        android:textSize="48.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:id="@id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:ellipsize="end"
        android:fontFamily="@string/font_family_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxWidth="589.0dip"
        android:maxLines="2"
        android:textColor="#ffffffff"
        android:textSize="24.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <FrameLayout
        android:id="@id/button"
        android:layout_width="@dimen/music_promo_width_button"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45.0dip"
        android:gravity="center"
        android:minHeight="44.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5.0dip"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:minHeight="44.0dip"
            android:text="@string/music_promo_button_0"
            android:textColor="#ffffffff"
            android:textSize="16.0dip" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>