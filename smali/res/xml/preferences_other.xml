    <PreferenceCategory android:title="@string/vtverify">
        <Preference
            android:enabled="false"
            android:summary="@string/vtverifyinfosum"
            android:title="@string/vtverifyinfo" />
        <Preference
            android:persistent="false"
            android:summary="vtosters.app/donate"
            android:title="@string/getvtverify">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://vtosters.app/donate" />
        </Preference>
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
