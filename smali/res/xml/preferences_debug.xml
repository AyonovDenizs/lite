<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferences_debug">
    <Preference
        android:enabled="false"
        android:summary="@string/debug_warning_summary"
        android:title="@string/debug_warning" />
    <com.vtosters.lite.ui.MaterialSwitchPreference
        android:defaultValue="false"
        android:key="devmenu"
        android:title="@string/debug_show_settings_item" />
    <PreferenceCategory android:title="@string/debug_experimental">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="msgtails"
            android:summary="@string/messages_interface_tails_summary"
            android:title="@string/vtlmsgtails" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="calls"
            android:summary="@string/messages_interface_calls_summary"
            android:title="@string/vtlcalls" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="usevkui"
            android:summary="@string/debug_experimental_usevkui"
            android:title="@string/vtlusevkui" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="unlockstats"
            android:summary="@string/debug_experimental_page_stats_summary"
            android:title="@string/debug_experimental_page_stats" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="vksans"
            android:title="@string/debug_experimental_vk_sans_font" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="vkme_msg"
            android:title="@string/debug_experimental_vk_me_mode" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="libverify"
            android:summary="@string/debug_experimental_libverify_summary"
            android:title="@string/debug_experimental_libverify" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="msgflat"
            android:title="@string/vtlmsgflat" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="opusmodule"
            android:title="@string/debug_experimental_opusmodule" />
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="system"
            android:dialogTitle="@string/debug_experimental_language_summary"
            android:entries="@array/language"
            android:entryValues="@array/lang_value"
            android:key="lang_value"
            android:title="@string/debug_experimental_language" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="disableanimstickers"
            android:title="Disable anim stickers + suggestions" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/debug_developer_functions">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="dev"
            android:summary="@string/debug_developer_mode_summary"
            android:title="@string/debug_developer_mode" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="ssl"
            android:summary="@string/debug_developer_force_ssl_summary"
            android:title="@string/debug_developer_force_ssl" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="darkmode"
            android:title="@string/debug_developer_dark_mode" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="isMusicRestricted"
            android:summary="@string/debug_developer_is_music_restricted_summary"
            android:title="@string/debug_developer_is_music_restricted" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="hasMusicSubscription"
            android:summary="@string/debug_developer_has_music_subscription_summary"
            android:title="@string/debug_developer_has_music_subscription" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="oldabout"
            android:title="@string/debug_developer_old_about" />
        <EditTextPreference
            android:defaultValue="https://vtsf.vknext.net"
            android:key="ssfscustom"
            android:title="@string/debug_developer_ssfs_custom" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="domains"
        android:title="@string/debug_domains">
        <Preference
            android:enabled="false"
            android:summary="@string/debug_domains_editing_summary"
            android:title="@string/debug_domains_editing" />
        <EditTextPreference
            android:defaultValue="api.vk.com"
            android:key="apiHost"
            android:title="@string/debug_domains_api" />
        <EditTextPreference
            android:defaultValue="oauth.vk.com"
            android:key="oauthHost"
            android:title="@string/debug_domains_oauth" />
        <EditTextPreference
            android:defaultValue="static.vk.com"
            android:key="vkUiHostUri"
            android:title="@string/debug_domains_vkui_host" />
        <EditTextPreference
            android:defaultValue="vk.com/spa"
            android:key="spaUri"
            android:title="@string/debug_domains_vkui_spa" />
        <EditTextPreference
            android:defaultValue="m.vk.com"
            android:key="awayPhpDomain"
            android:title="@string/debug_domains_awayphp" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="logging"
        android:title="@string/debug_logging">
        <Preference
            android:key="__dbg_log_to_file"
            android:summary="@string/debug_logging_file_summary"
            android:title="@string/debug_logging_file" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_api"
            android:summary="@string/debug_logging_api_summary"
            android:title="@string/debug_logging_api" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_api_errors"
            android:summary="@string/debug_logging_api_errors_summary"
            android:title="@string/debug_logging_api_errors" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_force_send"
            android:title="@string/debug_logging_force_stats_sending" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_webview"
            android:title="@string/debug_logging_webview" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_view_post_time_overlay"
            android:summary="@string/debug_logging_visualise_viewposttime_summary"
            android:title="@string/debug_logging_visualise_viewposttime" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_allow_requests_breakpoints"
            android:summary="@string/debug_logging_breakpoints_summary"
            android:title="@string/debug_logging_breakpoints" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_apply_spaces"
            android:summary="@string/debug_logging_apply_spaces_summary"
            android:title="@string/debug_logging_apply_spaces" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_mem_leak"
            android:title="@string/debug_logging_memleak" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="cache"
        android:title="@string/debug_cache">
        <Preference
            android:key="clearTrustedHash"
            android:title="@string/debug_cache_trusted_hash" />
        <Preference
            android:key="clearWebViewCache"
            android:title="@string/debug_cache_webview" />
        <Preference
            android:key="clearVideoCache"
            android:title="@string/debug_cache_video" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="system"
        android:title="@string/debug_system">
        <EditTextPreference
            android:key="__dbg_lang_override"
            android:title="@string/debug_system_language" />
        <Preference
            android:key="__dbg_terminate"
            android:title="@string/debug_system_terminate" />
        <Preference
            android:key="__dbg_re_register_firebase"
            android:title="@string/debug_system_fcm" />
        <Preference
            android:key="__dbg_copy_firebase_token"
            android:title="@string/debug_system_fcm_copy_token" />
        <Preference
            android:key="reRegisterGoogleNow"
            android:title="@string/debug_system_google_now" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="tests"
        android:title="@string/debug_tests">
        <Preference
            android:key="__dbg_test_bday"
            android:title="@string/debug_tests_bd" />
        <Preference
            android:key="__dbg_test_validation"
            android:title="@string/debug_tests_validation" />
        <Preference
            android:key="__dbg_test_captcha"
            android:title="@string/debug_tests_captcha" />
        <Preference
            android:key="__dbg_test_crash"
            android:title="@string/debug_tests_crash" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_demo_ads"
            android:title="@string/debug_tests_ads" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_demo_pretty_cards"
            android:title="@string/debug_tests_pretty_cards" />
        <EditTextPreference
            android:defaultValue="static.vk.com/demo"
            android:key="testSPAUri"
            android:title="@string/debug_tests_spa_uri" />
        <Preference
            android:key="__dbg_test_vk_ui"
            android:title="@string/debug_tests_spa" />
    </PreferenceCategory>
    <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    <PreferenceCategory android:title="@string/debug_proxy">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="proxyvk"
            android:summary="@string/debug_proxy_force_summary"
            android:title="@string/debug_proxy_force" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="__dbg_proxy_enable"
            android:summary="@string/debug_proxy_enable_summary"
            android:title="@string/debug_proxy_enable" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="others"
        android:title="@string/debug_other" />
    <com.vtosters.lite.ui.MaterialSectionDividerPreference />
</PreferenceScreen>