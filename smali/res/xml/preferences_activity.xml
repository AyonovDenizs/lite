<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/dnr">
        <Preference
            android:enabled="false"
            android:summary="@string/activity_dnr_summary"
            android:title="@string/activity_what_is_it" />
        <Preference
            android:enabled="false"
            android:summary="@string/activity_dnr_visual"
            android:title="@string/activity_dnr_warn" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="read_pm"
            android:title="@string/act_pm" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="read_conversations"
            android:title="@string/act_cnv" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="read_bot"
            android:title="@string/act_bot" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/dnw">
        <Preference
            android:enabled="false"
            android:summary="@string/activity_dnw_summary"
            android:title="@string/activity_what_is_it" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="write_pm"
            android:title="@string/act_pm" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="write_conversations"
            android:title="@string/act_cnv" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="write_bot"
            android:title="@string/act_bot" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/stories_vtl">
        <Preference
            android:enabled="false"
            android:summary="@string/activity_dns_summary"
            android:title="@string/activity_what_is_it" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="dns"
            android:title="@string/dns" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/activity_undel">
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="default"
            android:dialogTitle="@string/activity_undel_dial"
            android:entries="@array/undel_value"
            android:entryValues="@array/undel"
            android:key="undeletemsg_prefix"
            android:title="@string/activity_undel_tag" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="undeletemsg"
            android:summary="@string/activity_undel_attachments"
            android:title="@string/activity_undel_enable" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/online_vtl">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="offline"
            android:summary="@string/vtlofflinesummary"
            android:title="@string/vtloffline" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/offline_vtl">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="setoffline"
            android:summary="@string/vtloffline2summary"
            android:title="@string/vtloffline2" />
        <com.vtosters.lite.ui.MaterialSectionDividerPreference />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/privacy_vtl">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="awayphp"
            android:summary="@string/vtlawayphpsummary"
            android:title="@string/vtlawayphp" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="benchmark"
            android:summary="@string/benchapisummary"
            android:title="@string/benchapi" />
    </PreferenceCategory>
</PreferenceScreen>