<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:orientation="horizontal">

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/user_photo"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16.0dip"
        android:layout_marginEnd="10.0dip"
        app:placeholderImage="@drawable/user_placeholder" />

    <LinearLayout
        android:id="@id/profile"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16.0dip"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_medium"
            android:shadowColor="#52000000"
            android:shadowDy="2.0"
            android:shadowRadius="12.0"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14.0sp" />

        <com.vk.core.view.links.LinkedTextView
            android:id="@id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16.0dip"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_regular"
            android:gravity="start"
            android:shadowColor="#52000000"
            android:shadowDy="2.0"
            android:shadowRadius="12.0"
            android:singleLine="true"
            android:textColor="#d7ffffff"
            android:textSize="12.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@id/share_btn"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8.0dip"
        android:padding="8.0dip"
        android:src="@drawable/ic_share_24"
        android:tint="@color/white" />
</LinearLayout>