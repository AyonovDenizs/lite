<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/MusicTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32.0dip"
        android:text="@string/music_playlist_empty_text"
        android:textColor="@color/music_playlist_empty_text" />

    <TextView
        android:id="@id/music_playlist_attach_music_button"
        style="@style/MusicTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16.0dip"
        android:background="@drawable/music_rounded_blue_btn"
        android:fontFamily="@string/font_family_medium"
        android:paddingLeft="12.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="8.0dip"
        android:text="@string/music_playlist_attach_music_button_label"
        android:textColor="@color/music_text_primary_inverse" />
</LinearLayout>