<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13.0dip"
    app:alignContent="flex_start"
    app:alignItems="flex_start"
    app:dividerDrawable="@drawable/flexbox_divider"
    app:flexWrap="wrap"
    app:showDivider="beginning|middle">

    <com.vk.stories.clickable.views.StoryGradientTextView
        android:id="@id/geo_sticker_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/story_clickable_sticker_inner_horizontal_margin"
        android:layout_marginEnd="@dimen/story_clickable_sticker_inner_horizontal_margin"
        android:layout_marginBottom="@dimen/story_clickable_sticker_bottom_divider_height"
        android:background="@drawable/bg_story_clickable_holder"
        android:drawableStart="@drawable/ic_geo_outline_stories_24"
        android:drawablePadding="4.0dip"
        android:fontFamily="@font/tt_commons_demi_bold"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="@dimen/story_clickable_sticker_inner_horizontal_padding"
        android:paddingTop="@dimen/story_clickable_sticker_inner_vertical_padding"
        android:paddingEnd="@dimen/story_clickable_sticker_inner_horizontal_padding"
        android:paddingBottom="@dimen/story_clickable_sticker_inner_vertical_padding"
        android:text="@string/story_geo_sticker_flexbox_title"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/story_clickable_sticker_font_size"
        app:drawableTint="@color/story_geo_sticker_grad_start"
        app:gradient_tv_endColor="@color/story_geo_sticker_grad_end"
        app:gradient_tv_startColor="@color/story_geo_sticker_grad_start" />

    <com.vk.stories.clickable.views.StoryGradientTextView
        android:id="@id/hashtag_text_view"
        style="@style/StoryStickerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/story_hashtag_default"
        app:gradient_tv_endColor="@color/story_hashtag_bright_grad_end"
        app:gradient_tv_startColor="@color/story_hashtag_bright_grad_start" />

    <com.vk.stories.clickable.views.StoryGradientTextView
        android:id="@id/mention_text_view"
        style="@style/StoryStickerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/story_mention_default"
        app:gradient_tv_endColor="@color/story_mention_bright_grad_end"
        app:gradient_tv_startColor="@color/story_mention_bright_grad_start" />

    <include layout="@layout/story_gif_item" />

    <com.vk.stories.clickable.views.StoryGradientTextView
        android:id="@id/story_flexbox_music_sticker_view"
        style="@style/StoryStickerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_stories_music_outline_24"
        android:drawablePadding="4.0dip"
        android:paddingStart="8.0dip"
        android:text="@string/story_music_sticker_title"
        android:textAllCaps="true"
        app:drawableTint="@color/story_music_sticker_grad_start"
        app:gradient_tv_endColor="@color/story_music_sticker_grad_end"
        app:gradient_tv_startColor="@color/story_music_sticker_grad_start" />

    <TextView
        android:id="@id/story_flexbox_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/story_clickable_sticker_bottom_divider_height"
        android:ellipsize="end"
        android:fontFamily="@font/tt_commons_demi_bold"
        android:letterSpacing="0.01"
        android:paddingStart="32.0dip"
        android:paddingTop="2.0dip"
        android:paddingEnd="24.0dip"
        android:paddingBottom="8.0dip"
        android:singleLine="true"
        android:text="@string/story_questions"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/story_clickable_sticker_font_size" />

    <com.vk.stories.clickable.views.StoryGradientTextView
        android:id="@id/story_flexbox_poll_sticker_view"
        style="@style/StoryStickerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_poll_24"
        android:drawablePadding="4.0dip"
        android:paddingStart="8.0dip"
        android:paddingEnd="8.0dip"
        android:text="@string/story_sharing_poll"
        android:textAllCaps="true"
        app:drawableTint="@color/story_poll_grad_start"
        app:gradient_tv_endColor="@color/story_poll_grad_end"
        app:gradient_tv_startColor="@color/story_poll_grad_start" />

    <include layout="@layout/story_good_item" />

    <include layout="@layout/story_time_item" />

    <com.vk.stories.clickable.views.StoryGradientTextView
        android:id="@id/photo_sticker_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/story_clickable_sticker_inner_horizontal_margin"
        android:layout_marginEnd="@dimen/story_clickable_sticker_inner_horizontal_margin"
        android:layout_marginBottom="@dimen/story_clickable_sticker_bottom_divider_height"
        android:background="@drawable/bg_story_clickable_holder"
        android:drawableStart="@drawable/ic_picture_outline_stories_24"
        android:drawablePadding="4.0dip"
        android:fontFamily="@font/tt_commons_demi_bold"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="@dimen/story_clickable_sticker_inner_horizontal_padding"
        android:paddingTop="@dimen/story_clickable_sticker_inner_vertical_padding"
        android:paddingEnd="@dimen/story_clickable_sticker_inner_horizontal_padding"
        android:paddingBottom="@dimen/story_clickable_sticker_inner_vertical_padding"
        android:text="@string/story_photo_sticker_flexbox_title"
        android:textAllCaps="true"
        android:textSize="@dimen/story_clickable_sticker_font_size"
        app:drawableTint="@color/story_photo_grad_start"
        app:gradient_tv_endColor="@color/story_photo_grad_end"
        app:gradient_tv_startColor="@color/story_photo_grad_start" />
</com.google.android.flexbox.FlexboxLayout>