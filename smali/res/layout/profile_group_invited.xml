<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/profile_group_invited"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12.0dip"
    android:clipToPadding="false">

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/photo"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="12.0dip"
        app:placeholderImage="@drawable/user_placeholder" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="76.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_marginBottom="12.0dip"
        android:orientation="vertical">

        <com.vk.core.view.links.LinkedTextView
            android:id="@id/text"
            style="@style/VKUIText.Subhead1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:textColor="?text_primary" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/accept"
                style="@style/VKUIButton.Primary.Rounded"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                android:layout_marginEnd="8.0dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/group_inv_accept"
                android:textSize="14.0dip" />

            <TextView
                android:id="@id/reject"
                style="@style/VKUIButton.Secondary.Rounded"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/group_inv_decline"
                android:textSize="14.0dip" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>