<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@id/album_thumb"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffe9edf2"
        android:scaleType="center"
        android:src="@drawable/ic_camera_48"
        android:tint="#ffbcc6d1" />

    <View
        android:id="@id/scrim"
        android:layout_width="fill_parent"
        android:layout_height="72.0dip"
        android:layout_alignParentBottom="true"
        android:alpha="0.5" />

    <TextView
        android:id="@id/album_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/scrim"
        android:layout_marginLeft="12.0dip"
        android:layout_marginBottom="11.0dip"
        android:layout_toLeftOf="@id/album_qty"
        android:ellipsize="end"
        android:fontFamily="@string/font_family_medium"
        android:singleLine="true"
        android:text="Album Title"
        android:textColor="#ff78838f"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/album_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/scrim"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:singleLine="true"
        android:text="9000"
        android:textColor="#9978838f"
        android:textSize="14.0dip"
        android:visibility="gone" />

    <ImageView
        android:id="@id/album_actions"
        android:layout_width="36.0dip"
        android:layout_height="48.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@drawable/ic_actions_small_24"
        android:tint="#ff78838f" />
</RelativeLayout>