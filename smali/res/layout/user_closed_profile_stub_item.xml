<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16.0dip"
    android:layout_marginEnd="16.0dip"
    android:background="@drawable/bg_closed_profile_stub">

    <ImageView
        android:id="@id/image"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_marginStart="12.0dip"
        android:layout_marginTop="16.0dip"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_lock_outline_56"
        android:tint="@color/steel_gray_300" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@id/title"
            style="@style/VKUIText.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_profile_is_closed"
            android:textColor="?text_primary" />

        <TextView
            android:id="@id/description"
            style="@style/VKUIText.Subhead1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginEnd="12.0dip"
            android:textColor="?text_placeholder" />
    </LinearLayout>
</FrameLayout>