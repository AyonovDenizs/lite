        android:minWidth="18.0dip"
        android:minHeight="18.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:singleLine="true"
        android:textColor="?counter_primary_text"
        android:textSize="12.0sp" />

    <View
        android:id="@id/dot"
