        android:layout_height="@dimen/bottom_navigation_dot_height"
        android:layout_marginStart="34.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/bottom_navigation_dot_corner"
        android:backgroundTint="?counter_primary_background"
        android:clickable="false"
        android:visibility="gone" />
</FrameLayout>