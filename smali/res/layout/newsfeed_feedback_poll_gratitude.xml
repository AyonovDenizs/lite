<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/gratitude"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/post_side_padding"
    android:paddingTop="16.0dip"
    android:paddingEnd="@dimen/post_side_padding"
    android:paddingBottom="16.0dip"
    android:visibility="gone">

    <View
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16.0dip"
        android:background="@drawable/ic_done_outline_56"
        android:backgroundTint="?accent"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@id/gratitude_title"
        style="@style/VKUIText.Title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@id/gratitude_subtitle"
        style="@style/VKUIText.Text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24.0dip"
        android:gravity="center_horizontal"
        android:textColor="?text_secondary" />

    <TextView
        android:id="@id/gratitude_button"
        style="@style/VKUIButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>