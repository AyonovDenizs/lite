<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlight"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/icon_bday_user"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginStart="12.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginEnd="12.0dip"
        android:layout_marginBottom="4.0dip"
        android:scaleType="centerInside"
        app:placeholderImage="@drawable/user_placeholder"
        app:roundedCornerRadius="20.0dip" />

    <TextView
        android:id="@id/name_bday_user"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:gravity="start"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="?text_primary"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/tomorrow_bday_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16.0dip"
        android:fontFamily="@font/roboto_medium"
        android:gravity="start"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/tomorrow"
        android:textAllCaps="true"
        android:textColor="?text_secondary"
        android:textSize="13.0sp" />

    <ImageView
        android:id="@id/gift_bday_user"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:contentDescription="@string/accessibility_send_gift"
        android:padding="12.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/ic_gift_outline_24"
        android:tint="?accent" />
</LinearLayout>