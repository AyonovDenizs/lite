<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <androidx.viewpager.widget.ViewPager
        android:id="@id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom|center"
        android:fitsSystemWindows="true" />

    <FrameLayout
        android:id="@id/page_indicator_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/promo_page_indicator_height"
        android:layout_gravity="bottom|center">

        <com.vk.core.widget.PageIndicator
            android:id="@id/page_indicator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center|top"
            android:layout_marginTop="6.0dip"
            app:PIColorNormal="#99ffffff"
            app:PIColorSelect="@android:color/white"
            app:PIRadiusBig="4.0dip"
            app:PIRadiusNormal="3.0dip"
            app:PIStepInner="16.0dip"
            app:PIType="circle" />
    </FrameLayout>

    <ImageView
        android:id="@id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="32.0dip"
        android:contentDescription="@string/ui_accessibility_close"
        android:foreground="@drawable/highlight"
        android:src="@drawable/ic_cancel_24" />
</FrameLayout>