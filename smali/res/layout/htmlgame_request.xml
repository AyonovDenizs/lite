<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16.0dip"
    android:paddingTop="4.0dip"
    android:paddingEnd="16.0dip"
    android:paddingBottom="2.0dip">

    <TextView
        android:id="@id/tv_game_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?text_secondary"
        android:textSize="14.0sp" />

    <View
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="12.0dip"
        android:background="@color/black_alpha12" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:orientation="horizontal">

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/photo"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            app:placeholderImage="@drawable/user_placeholder" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="12.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_game_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?text_primary"
                android:textSize="14.0sp" />

            <TextView
                android:id="@id/tv_game_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="?text_secondary"
                android:textSize="14.0sp" />
        </LinearLayout>

        <com.vk.imageloader.view.VKImageView
            android:id="@id/iv_game_photo"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_marginStart="12.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip">

        <Button
            android:id="@id/positive"
            style="@style/VKUIButton.Primary.Small.Flat"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4.0dip"
            android:layout_weight="1.0"
            android:text="@string/send" />

        <Button
            android:id="@id/negative"
            style="@style/VKUIButton.Secondary.Small.Flat"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="4.0dip"
            android:layout_weight="1.0"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>