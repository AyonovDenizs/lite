<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="5.0sp"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:singleLine="true"
        android:text="@string/liblists_err_text"
        android:textColor="@color/white"
        android:textSize="15.0sp" />

    <TextView
        android:id="@id/error_button"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="6.0dip"
        android:background="@drawable/story_background_retry"
        android:ellipsize="end"
        android:fontFamily="@string/font_family_medium"
        android:foreground="@drawable/white_ripple_bounded_2dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="5.0sp"
        android:padding="4.0dip"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:singleLine="true"
        android:text="@string/liblists_retry"
        android:textColor="@color/white"
        android:textSize="15.0sp" />
</LinearLayout>