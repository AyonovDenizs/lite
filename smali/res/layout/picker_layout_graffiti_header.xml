<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?background_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="76.0dip">

        <com.vk.core.view.TintTextView
            android:id="@id/fl_new_graffiti"
            style="@style/VKUIButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="44.0dip"
            android:layout_gravity="center"
            android:layout_margin="16.0dip"
            android:layout_marginRight="8.0dip"
            android:clickable="true"
            android:drawableStart="@drawable/picker_ic_add_16"
            android:drawablePadding="16.0dip"
            android:paddingTop="4.0dip"
            android:paddingBottom="6.0dip"
            android:text="@string/picker_new_graffiti"
            android:textSize="16.0sp"
            app:drawableStartTint="?button_primary_foreground" />
    </FrameLayout>

    <TextView
        android:id="@id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="72.0dip"
        android:gravity="center"
        android:text="@string/picker_graffiti_history_desc"
        android:textColor="?text_secondary"
        android:textSize="16.0sp" />
</LinearLayout>