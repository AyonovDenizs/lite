<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16.0dip"
    android:paddingTop="12.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="14.0dip">

    <TextView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.0dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Title"
        android:textColor="?text_subhead"
        android:textSize="14.0dip" />

    <com.vk.core.view.links.LinkedTextView
        android:id="@id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="64.0dip"
        android:lineSpacingExtra="5.0dip"
        android:textColor="?text_primary"
        android:textSize="16.0dip" />

    <TextView
        android:id="@id/subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="64.0dip"
        android:lineSpacingExtra="3.0dip"
        android:text="Subtitle"
        android:textColor="?text_secondary"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="4.0dip"
        android:layout_toLeftOf="@id/photo"
        android:autoLink="email|phone"
        android:lineSpacingExtra="3.0dip"
        android:linksClickable="true"
        android:maxLines="2"
        android:text="+79990001112"
        android:textColorLink="?accent"
        android:textSize="14.0dip" />

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/photo"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16.0dip" />
</RelativeLayout>