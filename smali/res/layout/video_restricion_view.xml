<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/video_restriction_holder"
    android:gravity="center"
    android:orientation="vertical">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/video_restriction_holder_image"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.vk.imageloader.view.VKImageView
        android:id="@id/video_restriction_holder_icon"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        app:layout_constraintBottom_toTopOf="@id/video_restriction_holder_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@id/video_restriction_holder_title"
        style="@style/VKUIText.Title2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        app:layout_constraintBottom_toTopOf="@id/video_restriction_holder_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_restriction_holder_icon" />

    <TextView
        android:id="@id/video_restriction_holder_button"
        style="@style/outline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:backgroundTint="?text_placeholder"
        android:clickable="true"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:textAppearance="@style/VKUIText.Text"
        android:textColor="?text_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_restriction_holder_title" />
</merge>