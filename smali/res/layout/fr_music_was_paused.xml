<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@id/close_btn"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="right"
            android:layout_margin="4.0dip"
            android:background="@drawable/highlight"
            android:clickable="true">

            <View
                android:id="@id/close_btn_img"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.vk.imageloader.view.VKImageView
                android:id="@id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24.0dip"
                android:layout_marginBottom="16.0dip"
                android:contentDescription="@null" />

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3.0dip"
                android:textColor="@color/music_list_item_title_color"
                android:textSize="16.0dip" />

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginBottom="20.0dip"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4.0dip"
                android:textColor="@color/music_playlist_empty_text"
                android:textSize="14.0dip" />

            <TextView
                android:id="@id/button_more"
                style="@style/BlueButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginBottom="24.0dip"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:text="@string/music_pause_alert_more" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>