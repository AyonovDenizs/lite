<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12.0dip"
            android:src="@drawable/ic_hide_outline_56"
            android:tint="?colorAccent" />

        <TextView
            android:id="@id/title"
            style="@style/VKUIText.Title1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:gravity="center_horizontal"
            android:textColor="?text_primary" />

        <com.vk.core.view.links.LinkedTextView
            android:id="@id/message"
            style="@style/VKUIText.Subhead1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="?text_subhead" />

        <TextView
            android:id="@id/negative_button"
            style="@style/VKUIButton.Primary"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_marginTop="32.0dip"
            android:height="44.0dip"
            android:text="@string/community_warning_notification_negative_button"
            android:textSize="16.0dip" />

        <TextView
            android:id="@id/positive_button"
            style="@style/VKUIButton.Secondary"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_marginTop="12.0dip"
            android:text="@string/community_warning_notification_positive_button"
            android:textSize="16.0dip" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>