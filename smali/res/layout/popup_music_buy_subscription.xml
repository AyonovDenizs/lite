<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="16.0dip"
    android:layout_marginEnd="16.0dip"
    android:background="@drawable/white_rect_with_12dp_corners"
    android:maxWidth="328.0dip">

    <View
        android:id="@id/music_promo_paid_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/music_buy_subscribtion_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@id/vk_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music_promo_vk_music"
        app:layout_constraintBottom_toBottomOf="@id/music_promo_paid_header"
        app:layout_constraintEnd_toEndOf="@id/music_promo_paid_header"
        app:layout_constraintStart_toStartOf="@id/music_promo_paid_header"
        app:layout_constraintTop_toTopOf="@id/music_promo_paid_header" />

    <TextView
        android:id="@id/music_promo_paid_title_1"
        style="@style/MusicPromoPlan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:drawableStart="@drawable/ic_music_promo_headphones_outline_24"
        android:drawablePadding="16.0dip"
        android:includeFontPadding="false"
        android:text="@string/music_promo_paid_plan_point_1"
        app:layout_constraintTop_toBottomOf="@id/music_promo_paid_header" />

    <TextView
        android:id="@id/music_promo_paid_title_2"
        style="@style/MusicPromoPlan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:drawableStart="@drawable/ic_music_promo_smile_24"
        android:drawablePadding="16.0dip"
        android:includeFontPadding="false"
        android:text="@string/music_promo_paid_plan_point_2"
        app:layout_constraintTop_toBottomOf="@id/music_promo_paid_title_1" />

    <TextView
        android:id="@id/music_promo_paid_title_3"
        style="@style/MusicPromoPlan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:drawableStart="@drawable/ic_music_promo_download_24"
        android:drawablePadding="16.0dip"
        android:includeFontPadding="false"
        android:text="@string/music_promo_paid_plan_point_3"
        app:layout_constraintTop_toBottomOf="@id/music_promo_paid_title_2" />

    <com.vk.music.ui.subscription.BuyMusicSubscriptionButton
        android:id="@id/buy_music_subscription_btn"
        style="@style/VKUIButton.Primary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_marginBottom="24.0dip"
        android:minHeight="56.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_promo_paid_title_3" />

    <TextView
        android:id="@id/music_cancel_dialog"
        style="@style/VKUIButton.Tertiary"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:background="@drawable/music_selectable_bg"
        android:gravity="center"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:text="@string/music_discard_subscription"
        android:textColor="?accent"
        android:textSize="16.0dip"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buy_music_subscription_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>