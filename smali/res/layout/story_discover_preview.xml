<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/iv_story_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:placeholderImage="@color/discover_stories_placeholder"
        app:placeholderImageScaleType="fitCenter"
        app:roundedCornerRadius="2.0dip" />

    <View
        android:id="@id/gradient"
        android:layout_width="fill_parent"
        android:layout_height="70.0dip"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2.0dip"
        android:background="@drawable/scrim_bottom_opaque"
        android:backgroundTint="#90000000" />

    <View
        android:id="@id/gradient_corners"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_corners_rect"
        android:backgroundTint="#90000000" />

    <TextView
        android:id="@id/tv_first_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="@string/font_family_medium"
        android:gravity="start"
        android:hyphenationFrequency="none"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingBottom="20.0dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <TextView
        android:id="@id/tv_second_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="@string/font_family_medium"
        android:gravity="start"
        android:hyphenationFrequency="none"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingBottom="6.0dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <View
        android:id="@id/click_handler"
        android:layout_width="@dimen/story_card_rect_width"
        android:layout_height="fill_parent"
        android:background="@drawable/picker_white_ripple_bounded_2dp"
        android:importantForAccessibility="no" />
</merge>