<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:theme="@style/ChooseCountryBottomSheetTheme">

    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        app:navigationContentDescription="@string/vk_auth_accessibility_choose_country_close"
        app:navigationIcon="@drawable/vk_ic_cancel_24"
        app:title="@string/vk_auth_choose_country_title" />

    <FrameLayout
        android:id="@id/search_view_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recycler"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>