<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlight"
    android:gravity="center_vertical"
    android:minHeight="48.0dip"
    android:orientation="horizontal"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip"
    android:weightSum="1.0">

    <ImageView
        android:id="@id/iv_icon"
        android:layout_width="?vkapp_menu_icon_size"
        android:layout_height="?vkapp_menu_icon_size"
        android:scaleType="center" />

    <TextView
        android:id="@id/tv_title"
        style="@style/VKUIText.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:singleLine="true" />

    <Space
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

    <TextView
        android:id="@id/tv_new_badge"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:background="@drawable/fragment_menu_new_bg"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:paddingLeft="8.0dip"
        android:paddingTop="3.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:singleLine="true"
        android:text="@string/new_badge"
        android:textColor="?button_muted_foreground"
        android:textSize="13.0sp" />

    <TextView
        android:id="@id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="22.0dip"
        android:background="@drawable/fragment_menu_counter_bg"
        android:gravity="center"
        android:minWidth="22.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:singleLine="true"
        android:textColor="?counter_secondary_text"
        android:textSize="15.0sp" />
</LinearLayout>