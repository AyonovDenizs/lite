<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="56.0dip"
    android:layout_height="56.0dip"
    android:background="@drawable/mask_tab_bg">

    <View
        android:id="@id/view_selected_bg"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:background="@drawable/bg_stories_replied_card_active" />

    <com.vk.imageloader.view.VKImageView
        android:id="@id/iv_image"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"
        android:layout_gravity="center"
        app:actualImageScaleType="fitCenter"
        app:placeholderImage="@drawable/ic_stories_masks_placeholder_mask" />

    <View
        android:id="@id/view_unsupported"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:layout_gravity="center"
        android:layout_marginLeft="18.0dip"
        android:layout_marginTop="18.0dip"
        android:background="@drawable/ic_stories_masks_unsupported" />

    <View
        android:id="@id/view_intrigue"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="center"
        android:layout_margin="12.0dip"
        android:background="@drawable/ic_stories_masks_intrigue" />

    <View
        android:id="@id/view_new"
        android:layout_width="6.0dip"
        android:layout_height="6.0dip"
        android:layout_gravity="center|right|top"
        android:layout_margin="4.0dip"
        android:background="@drawable/bg_masks_new_badge" />
</FrameLayout>