<?xml version="1.0" encoding="utf-8"?>
<com.vk.core.widget.AutoAdjustLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.vk.im.ui.views.FrescoImageView
        android:id="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/vkim_accessibility_gift_simple"
        android:maxWidth="9999.0dip"
        android:maxHeight="176.0dip"
        android:minWidth="96.0dip"
        android:minHeight="176.0dip"
        app:vk_layout_isAdjust="true"
        app:vkim_scaleType="fit_center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44.0dip"
        android:layout_gravity="center"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/icon"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/vkim_ic_attach_gift"
            android:tint="?im_bubble_gift_text_secondary"
            android:translationY="-0.70000005dip" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6.0dip"
            android:lines="1"
            android:text="@string/vkim_msg_list_gift_simple_title"
            android:textAppearance="@style/VkIm.MsgPart.Gift.Title" />
    </LinearLayout>

    <TextView
        android:id="@id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="4.0dip"
        android:gravity="center"
        android:textAppearance="@style/VkIm.MsgPart.Gift.Description" />

    <TextView
        android:id="@id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="4.0dip"
        android:importantForAccessibility="no"
        android:lines="1"
        android:textAppearance="@style/VkIm.MsgPart.Time.TextGift" />
</com.vk.core.widget.AutoAdjustLinearLayout>