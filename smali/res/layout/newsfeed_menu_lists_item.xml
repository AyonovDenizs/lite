<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/newsfeed_menu_item_width"
    android:layout_height="wrap_content"
    android:foreground="@drawable/highlight"
    android:minHeight="48.0dip"
    android:paddingStart="18.0dip"
    android:paddingEnd="20.0dip">

    <ImageView
        android:id="@id/icon"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_gravity="start|center"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        android:tint="?accent" />

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="46.0dip"
        android:layout_marginEnd="46.0dip"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="?text_primary"
        android:textSize="16.0sp" />

    <View
        android:id="@id/check"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="end|center"
        android:background="@drawable/ic_check_fill_accent_24"
        android:importantForAccessibility="no" />
</FrameLayout>