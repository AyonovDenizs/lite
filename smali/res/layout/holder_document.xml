<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="64.0dip"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="@dimen/docs_padding"
    android:paddingRight="@dimen/docs_padding">

    <TextView
        android:id="@id/holder_document_type_text"
        android:layout_width="@dimen/document_preview_width"
        android:layout_height="@dimen/document_preview_height"
        android:layout_marginTop="@dimen/newsfeed_newpost_space"
        android:layout_marginBottom="@dimen/newsfeed_newpost_space"
        android:background="@drawable/docs_thumb_bg"
        android:ellipsize="marquee"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:padding="5.0dip"
        android:singleLine="true"
        android:textColor="?placeholder_icon_foreground_secondary"
        android:textSize="16.0sp" />

    <com.vk.imageloader.view.VKImageView
        android:id="@id/holder_document_preview_image"
        android:layout_width="@dimen/document_preview_width"
        android:layout_height="@dimen/document_preview_height"
        android:layout_marginTop="@dimen/newsfeed_newpost_space"
        android:layout_marginBottom="@dimen/newsfeed_newpost_space"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="2.0dip" />

    <TextView
        android:id="@id/holder_document_title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="76.0dip"
        android:layout_marginBottom="32.0dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="?text_primary"
        android:textSize="16.0dip" />

    <TextView
        android:id="@id/holder_document_info_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="76.0dip"
        android:layout_marginTop="35.0dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="?text_secondary"
        android:textSize="14.0dip" />
</FrameLayout>