<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="32.0dip"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@id/close_btn"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_gravity="start|center"
        android:contentDescription="@string/accessibility_close"
        android:cropToPadding="true"
        android:padding="8.0dip"
        android:src="@drawable/ic_close_16"
        android:tint="@android:color/white" />

    <TextView
        android:id="@id/game_name_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginStart="40.0dip"
        android:layout_marginEnd="40.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <ImageView
        android:id="@id/more_btn"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_gravity="end|center"
        android:contentDescription="@string/accessibility_actions"
        android:padding="8.0dip"
        android:src="@drawable/ic_more_horizontal_16"
        android:tint="@color/white" />
</FrameLayout>