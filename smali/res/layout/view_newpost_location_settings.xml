<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/attach_location_settings_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/newsfeed_newpost_permission_settings_view_top_space">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:text="@string/location_disabled"
        android:textColor="@color/subhead_gray"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/attach_location_settings_button"
        style="@style/VKUIButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16.0dip"
        android:singleLine="true"
        android:text="@string/open_settings"
        android:textSize="16.0sp" />
</LinearLayout>