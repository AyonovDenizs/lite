<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/UserSmallRoot">

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/photo"
        style="@style/UserSmallPhoto"
        app:placeholderImage="@drawable/user_placeholder" />

    <ImageView
        android:id="@id/action"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_list_selector"
        android:contentDescription="@string/accessibility_delete"
        android:padding="8.0dip"
        android:src="@drawable/ic_cancel_24"
        android:tint="?icon_secondary" />

    <TextView
        android:id="@id/title"
        style="@style/UserSmallTitle"
        android:layout_toStartOf="@id/action"
        android:textColor="?text_primary" />

    <ImageView style="@style/Online.Small" />
</RelativeLayout>