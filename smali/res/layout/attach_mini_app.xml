    android:layout_height="wrap_content">

    <include
        android:id="@id/attach_mini_app_wide"
        layout="@layout/attach_mini_app_wide" />

    <include
        android:id="@id/attach_mini_app_square"
        layout="@layout/attach_mini_app_square" />

    <ImageView
