<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/container"
    android:layout_width="138.0dip"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="138.0dip"
        android:layout_height="138.0dip">

        <com.vk.imageloader.view.VKSnippetImageView
            android:id="@id/iv_image"
            android:layout_width="138.0dip"
            android:layout_height="138.0dip" />

        <View
            android:layout_width="138.0dip"
            android:layout_height="138.0dip"
            android:background="@drawable/carousel_pretty_cards_image_bg" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/carousel_pretty_cards_bottom_bg"
        android:orientation="vertical"
        android:padding="12.0dip">

        <TextView
            android:id="@id/tv_title"
            style="@style/VKUIText.Caption1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:textColor="?text_muted" />

        <TextView
            android:id="@id/tv_description"
            style="@style/VKUIText.Caption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="?text_secondary" />

        <TextView
            android:id="@id/btn_action"
            style="@style/outline_button"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12.0dip"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>
</LinearLayout>