<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/picture"
        android:layout_width="120.0dip"
        android:layout_height="80.0dip"
        app:actualImageScaleType="centerCrop"
        app:overlayImage="@drawable/scrim_bottom_16percent"
        app:roundedCornerRadius="4.0dip" />

    <com.vk.libvideo.ui.VideoRestrictionView
        android:id="@id/media_restriction_view"
        android:layout_width="120.0dip"
        android:layout_height="80.0dip"
        android:visibility="gone"
        app:vrv_size="small" />

    <TextView
        android:id="@id/duration"
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_gravity="end|bottom|center"
        android:layout_marginStart="4.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginEnd="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:background="@drawable/bg_video_duration_label"
        android:drawableStart="@drawable/ic_play_16dp"
        android:drawablePadding="2.0dip"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingStart="2.0dip"
        android:paddingTop="4.0dip"
        android:paddingEnd="6.0dip"
        android:paddingBottom="3.0dip"
        android:textColor="@color/white"
        android:textSize="11.0dip" />

    <com.vk.core.view.VideoRestrictionView
        android:id="@id/media_deprecated_restriction_view"
        android:layout_width="120.0dip"
        android:layout_height="80.0dip"
        android:visibility="gone" />
</FrameLayout>