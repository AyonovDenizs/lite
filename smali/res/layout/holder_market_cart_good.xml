<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingStart="16.0dip"
    android:paddingTop="6.0dip"
    android:paddingEnd="16.0dip"
    android:paddingBottom="6.0dip">

    <com.vk.market.common.ui.SquareImageView
        android:id="@id/image"
        android:layout_width="120.0dip"
        android:layout_height="120.0dip"
        app:placeholderImage="@drawable/ic_market_outline_96_placeholder_rounded_8dp"
        app:placeholderImageScaleType="fitXY" />

    <LinearLayout
        android:id="@id/data_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.0dip"
        android:layout_marginTop="6.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@id/title"
            style="@style/VKUIText.Subhead1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@id/price"
            style="@style/VKUIText.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="3.0dip" />

        <TextView
            android:id="@id/item_unavailable_text"
            style="@style/VKUIText.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.0dip"
            android:text="@string/market_cart_item_unavailable"
            android:textColor="?text_primary"
            android:textSize="13.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@id/remove_from_cart"
            style="@style/VKUIText.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/highlight"
            android:fontFamily="@string/font_family_medium"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:text="@string/remove_from_cart"
            android:textColor="?text_link"
            android:textSize="13.0sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>