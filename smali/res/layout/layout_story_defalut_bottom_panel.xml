<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="122.0dip"
    android:layout_gravity="bottom"
    android:orientation="horizontal">

    <Space
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

    <LinearLayout
        android:id="@id/download"
        android:layout_width="88.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="6.0dip"
        android:background="@drawable/white_ripple_bounded_8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@drawable/ic_editor_download_outline_shadow_48" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="0.04"
            android:shadowColor="#3d000000"
            android:shadowDy="2.0"
            android:shadowRadius="4.0"
            android:singleLine="true"
            android:text="@string/story_save_short"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="11.0dip"
            android:visibility="visible" />
    </LinearLayout>

    <Space
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

    <LinearLayout
        android:id="@id/share_instant"
        android:layout_width="wrap_content"
        android:layout_height="86.0dip"
        android:layout_gravity="bottom"
        android:layout_marginBottom="6.0dip"
        android:background="@drawable/white_ripple_bounded_8dp"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:paddingStart="8.0dip"
        android:paddingEnd="8.0dip">

        <TextView
            android:id="@id/share_action_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="0.04"
            android:shadowColor="#3d000000"
            android:shadowDy="2.0"
            android:shadowRadius="4.0"
            android:singleLine="true"
            android:text="@string/story_publish_short"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="11.0dip" />
    </LinearLayout>

    <Space
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

    <LinearLayout
        android:id="@id/share_with_messages"
        android:layout_width="88.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="6.0dip"
        android:background="@drawable/white_ripple_bounded_8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@drawable/ic_editor_users_outline_shadow_48" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="0.04"
            android:shadowColor="#3d000000"
            android:shadowDy="2.0"
            android:shadowRadius="4.0"
            android:singleLine="true"
            android:text="@string/story_choose_receivers_short"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="11.0dip" />
    </LinearLayout>

    <Space
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />
</LinearLayout>