<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@id/ll_back"
        android:layout_width="56.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/picker_btn_actionbar_gradient"
        android:src="@drawable/ic_back_outline_28"
        android:tint="?icon_medium" />

    <FrameLayout
        android:layout_width="0.0px"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">

        <TextView
            android:id="@id/tv_title"
            style="@style/PickerGradientActionBarTitleStyle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|left" />

        <FrameLayout
            android:id="@id/fl_video_progress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="8.0dip">

            <com.vk.attachpicker.widget.VkSeekBar
                android:id="@id/vsb_video_progress"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="8.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip" />

            <TextView
                android:id="@id/tv_current_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:textColor="?text_secondary"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:textColor="?text_secondary"
                android:textSize="12.0sp" />
        </FrameLayout>
    </FrameLayout>

    <ImageButton
        android:id="@id/button_check"
        android:layout_width="56.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center|right"
        android:background="@drawable/picker_btn_actionbar_gradient"
        android:src="@drawable/picker_bg_gallery_check"
        android:tint="@color/picker_dark_icon" />
</merge>