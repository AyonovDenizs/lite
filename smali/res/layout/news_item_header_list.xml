<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="48.0dip"
    android:paddingBottom="8.0dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginLeft="@dimen/post_side_padding"
        android:layout_marginRight="@dimen/post_side_padding"
        android:includeFontPadding="false"
        android:paddingEnd="24.0dip"
        android:singleLine="true"
        android:text="@string/latest_news"
        android:textColor="?text_secondary"
        android:textSize="14.0sp"
        app:fontFamily="@font/roboto_medium" />

    <ImageView
        android:id="@id/post_options_btn"
        android:layout_width="36.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/post_side_padding_menu"
        android:background="@drawable/highlight"
        android:contentDescription="@string/common_actions"
        android:scaleType="center"
        android:src="@drawable/ic_more_vertical_24"
        android:tint="?icon_tertiary" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/post_side_padding"
        android:layout_marginRight="@dimen/post_side_padding"
        android:background="@drawable/bottom_divider_bg" />
</FrameLayout>