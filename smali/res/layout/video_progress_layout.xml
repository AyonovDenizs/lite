<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/pv_video_progress_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/video_progress_background_color"
    android:visibility="gone">

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@id/pv_video_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="4.0dip"
        android:maxHeight="3.0dip"
        android:minHeight="3.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:progressDrawable="@drawable/video_progress_seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/ic_video_progress_thumb_24" />

    <TextView
        android:id="@id/pv_video_progress_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8.0dip"
        android:layout_marginBottom="10.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:textColor="@android:color/white"
        android:textSize="12.0sp" />

    <TextView
        android:id="@id/pv_video_duration_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="8.0dip"
        android:layout_marginBottom="10.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:textColor="@android:color/white"
        android:textSize="12.0sp" />
</FrameLayout>