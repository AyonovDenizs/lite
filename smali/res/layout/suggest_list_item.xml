<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/flist_item_photo"
        android:layout_width="60.0dip"
        android:layout_height="80.0dip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="11.0dip"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="visible"
        app:actualImageScaleType="centerCrop" />

    <ImageView
        android:id="@id/flist_item_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/flist_item_photo"
        android:layout_alignBottom="@id/flist_item_photo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12.0dip"
        android:scaleType="center"
        android:src="@drawable/ic_suggest_add" />

    <TextView
        android:id="@id/flist_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16.0dip"
        android:layout_toLeftOf="@id/flist_item_online"
        android:layout_toRightOf="@id/flist_item_photo"
        android:duplicateParentState="false"
        android:text="TextView"
        android:textColor="@color/main_text"
        android:textSize="18.0dip" />

    <TextView
        android:id="@id/flist_item_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/flist_item_text"
        android:layout_alignRight="@id/flist_item_text"
        android:layout_marginTop="2.0dip"
        android:layout_toRightOf="@id/flist_item_photo"
        android:paddingBottom="17.0dip"
        android:text="TextView"
        android:textColor="#ff949494"
        android:textSize="15.0dip" />

    <com.vtosters.lite.ui.HighlightView
        android:id="@id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/flist_item_subtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-1.0dip" />
</RelativeLayout>