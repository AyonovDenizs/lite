<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/post_side_padding"
    android:paddingTop="8.0dip"
    android:paddingRight="@dimen/post_side_padding"
    android:paddingBottom="8.0dip">

    <com.vk.core.view.TintTextView
        android:id="@id/attach_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:drawableStart="@drawable/ic_user_24"
        android:drawablePadding="8.0dip"
        android:ellipsize="marquee"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:hyphenationFrequency="none"
        android:singleLine="true"
        android:textColor="?text_name"
        android:textDirection="locale"
        android:textSize="15.0sp"
        app:drawableTint="?icon_name" />

    <View
        android:id="@id/attach_common_remove_button"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="end|center"
        android:background="@drawable/picker_ic_close_24"
        android:backgroundTint="?icon_secondary"
        android:scaleType="center"
        android:visibility="gone" />
</FrameLayout>