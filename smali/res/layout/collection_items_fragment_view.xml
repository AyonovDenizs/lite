<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/collection_items_fragment_holder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.vk.lists.RecyclerPaginatedView
        android:id="@id/collection_items_fragment_recycler"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.vtosters.lite.actionlinks.views.holders.hint.ItemHintView
            android:id="@id/collection_items_fragment_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="70.0dip" />

        <com.vtosters.lite.actionlinks.views.holders.tip.ItemTipView
            android:id="@id/collection_items_fragment_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
    </LinearLayout>

    <com.vtosters.lite.actionlinks.views.holders.link.ItemLinkView
        android:id="@id/collection_items_fragment_link"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/collection_items_fragment_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16.0dip"
        android:gravity="center"
        android:text="valid"
        android:textColor="@color/red"
        android:textSize="14.0dip" />
</FrameLayout>