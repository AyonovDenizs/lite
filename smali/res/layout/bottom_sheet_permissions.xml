<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="8.0dip">

    <ImageView
        android:id="@id/icon"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="12.0dip"
        android:tint="?accent" />

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/photo"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="12.0dip"
        android:visibility="gone" />

    <TextView
        android:id="@id/title"
        style="@style/VKUIText.Title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="0.0sp"
        android:maxLines="3"
        android:textColor="?text_primary" />

    <TextView
        android:id="@id/subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/fontRobotoRegular"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2.0sp"
        android:maxLines="3"
        android:textColor="?text_subhead"
        android:textSize="14.0sp" />
</LinearLayout>