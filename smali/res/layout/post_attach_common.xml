<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/common_holder_frame_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingLeft="@dimen/post_side_padding"
    android:paddingTop="7.0dip"
    android:paddingRight="@dimen/post_side_padding"
    android:paddingBottom="8.0dip">

    <ImageView
        android:id="@id/attach_icon"
        android:layout_width="@dimen/post_attach_common_icon_size"
        android:layout_height="@dimen/post_attach_common_icon_size"
        android:layout_marginTop="1.0dip"
        android:scaleType="centerInside"
        android:tint="?attach_picker_tab_inactive_icon" />

    <FrameLayout
        android:id="@id/attach_error_view"
        android:layout_width="@dimen/post_attach_common_icon_size"
        android:layout_height="@dimen/post_attach_common_icon_size"
        android:layout_marginTop="1.0dip"
        android:visibility="gone">

        <ImageView
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="center"
            android:src="@drawable/ic_replay_36" />
    </FrameLayout>

    <TextView
        android:id="@id/attach_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/post_attach_common_text_left_space"
        android:ellipsize="end"
        android:fontFamily="@string/font_family_medium"
        android:maxLines="1"
        android:text="@string/attachment"
        android:textColor="?text_primary"
        android:textSize="15.0sp" />

    <TextView
        android:id="@id/attach_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/post_attach_common_text_left_space"
        android:layout_marginTop="21.0sp"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:text="@string/attach_link"
        android:textColor="?newsfeed_attach_subtitle_color"
        android:textSize="14.0sp" />

    <ImageView
        android:id="@id/attach_common_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginTop="1.0dip"
        android:contentDescription="@string/delete"
        android:scaleType="center"
        android:src="@drawable/picker_ic_close_24"
        android:tint="?icon_secondary"
        android:visibility="gone" />
</FrameLayout>