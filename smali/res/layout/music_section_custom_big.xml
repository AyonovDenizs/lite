<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="74.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/music_selectable_bg">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/icon"
        android:layout_width="66.0dip"
        android:layout_height="70.0dip"
        android:paddingBottom="4.0dip"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/user_placeholder"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/black_alpha8"
        app:roundingBorderWidth="0.5dip" />

    <ImageView
        android:id="@id/iv_verified"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon" />

    <TextView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="?text_muted"
        android:textSize="12.0sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon" />
</androidx.constraintlayout.widget.ConstraintLayout>