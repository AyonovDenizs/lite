<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/post_side_padding"
    android:paddingTop="8.0dip"
    android:paddingRight="@dimen/post_side_padding"
    android:paddingBottom="8.0dip">

    <com.vk.core.view.TintTextView
        android:id="@id/attach_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_place_24"
        android:drawablePadding="8.0dip"
        android:ellipsize="marquee"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="?text_name"
        android:textSize="15.0sp"
        app:drawableTint="?icon_name" />

    <ImageView
        android:id="@id/attach_common_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:scaleType="center"
        android:src="@drawable/picker_ic_close_24"
        android:tint="?icon_secondary"
        android:visibility="gone" />
</FrameLayout>