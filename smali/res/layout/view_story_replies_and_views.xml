<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@id/viewers_replies_wrap"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/stories_button_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@id/replies_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_viewer_reply_outline_shadow_28"
            android:drawablePadding="3.0dip"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:shadowColor="#1e000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="8.0"
            android:textColor="@color/white"
            android:textSize="15.0sp" />

        <TextView
            android:id="@id/views_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6.0dip"
            android:drawableStart="@drawable/ic_viewer_views_outline_shadow_28"
            android:drawablePadding="3.0dip"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center_vertical"
            android:shadowColor="#1e000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="8.0"
            android:textColor="@color/white"
            android:textSize="15.0sp" />
    </LinearLayout>

    <View
        android:id="@id/new_replies_badge"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_gravity="end|center|top"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="2.0dip"
        android:background="@drawable/ic_stories_viewer_replies_badge_20" />
</merge>