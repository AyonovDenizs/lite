<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/UserSmallRoot">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/photo"
        style="@style/UserSmallPhoto"
        app:placeholderImage="@drawable/sticker_placeholder" />

    <ImageButton
        android:id="@id/action"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_list_selector"
        android:src="@drawable/ic_list_remove"
        android:tint="?icon_secondary" />

    <TextView
        android:id="@id/title"
        style="@style/UserSmallTitle"
        android:layout_toLeftOf="@id/action"
        android:textColor="?text_muted" />
</RelativeLayout>