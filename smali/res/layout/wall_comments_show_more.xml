<?xml version="1.0" encoding="utf-8"?>
<com.vk.common.view.disableable.DisableableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/load_more_comments"
    android:layout_width="fill_parent"
    android:layout_height="36.0dip"
    android:background="@drawable/highlight"
    android:focusableInTouchMode="false"
    android:paddingStart="@dimen/post_side_padding"
    android:paddingEnd="@dimen/post_side_padding">

    <ImageView
        android:id="@id/arrow"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/comment_reply_margin_start"
        android:alpha="0.4"
        android:scaleType="center"
        android:src="@drawable/ic_down_16"
        android:tint="?button_secondary_foreground" />

    <TextView
        android:id="@id/loadmore_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/comment_reply_bar_margin_start"
        android:fontFamily="@string/font_family_medium"
        android:text="@string/comments_show_next"
        android:textColor="?button_secondary_foreground"
        android:textSize="14.0sp" />

    <ProgressBar
        android:id="@id/loadmore_progress"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_gravity="center"
        android:layout_marginBottom="1.0dip"
        android:indeterminateTint="?activity_indicator_tint"
        android:indeterminateTintMode="src_in"
        android:visibility="invisible" />
</com.vk.common.view.disableable.DisableableFrameLayout>