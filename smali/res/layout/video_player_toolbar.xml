<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="12.0dip">

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/user_photo"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_marginStart="12.0dip"
            android:layout_marginEnd="10.0dip" />

        <LinearLayout
            android:id="@id/profile"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16.0dip"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_family_medium"
                    android:shadowColor="#52000000"
                    android:shadowDy="2.0"
                    android:shadowRadius="12.0"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />

                <View
                    android:id="@id/verified_top"
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:layout_gravity="end|center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vk.core.view.links.LinkedTextView
                    android:id="@id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16.0dip"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_family_regular"
                    android:gravity="start"
                    android:shadowColor="#52000000"
                    android:shadowDy="2.0"
                    android:shadowRadius="12.0"
                    android:singleLine="true"
                    android:textColor="#d7ffffff"
                    android:textSize="12.0sp" />

                <View
                    android:id="@id/verified_bottom"
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:layout_gravity="end|center"
                    android:alpha="0.6" />
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@id/like"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/like"
            android:scaleType="center"
            android:src="@drawable/ic_like_outline_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@id/share"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/share"
            android:scaleType="center"
            android:src="@drawable/ic_share_outline_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@id/add"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/add"
            android:scaleType="center"
            android:src="@drawable/ic_add_outline_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@id/subscribe"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/profile_subscribe"
            android:scaleType="center"
            android:src="@drawable/ic_user_add_24"
            android:tint="@color/white" />

        <ImageView
            android:id="@id/more"
            android:layout_width="36.0dip"
            android:layout_height="48.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/menu"
            android:scaleType="center"
            android:src="@drawable/action_button_overflow_video"
            android:tint="@color/white" />

        <ImageView
            android:id="@id/cancel"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/close"
            android:scaleType="center"
            android:src="@drawable/ic_cancel_24"
            android:tint="@color/white" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_below="@id/toolbar" />
</merge>