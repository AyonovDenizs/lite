<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:minHeight="56.0dip"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/text_frame"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/highlight"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/post_side_padding"
        android:paddingRight="@dimen/post_side_padding">

        <TextView
            android:id="@id/text"
            style="@style/VKUIText.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_medium"
            android:paddingBottom="1.0dip"
            android:singleLine="true"
            android:textColor="?text_primary" />

        <TextView
            android:id="@id/count"
            style="@style/VKUIText.Caption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0dip"
            android:fontFamily="@string/font_family_medium"
            android:paddingBottom="1.0dip"
            android:singleLine="true"
            android:textColor="?text_secondary" />
    </LinearLayout>

    <TextView
        android:id="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="56.0dip"
        android:background="@drawable/highlight"
        android:duplicateParentState="false"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:paddingLeft="@dimen/post_side_padding"
        android:paddingRight="@dimen/post_side_padding"
        android:text="@string/all_albums"
        android:textColor="?accent"
        android:textSize="14.0dip" />
</LinearLayout>