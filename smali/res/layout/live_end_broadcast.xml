<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <ImageView
            android:id="@id/live_end_broadcast_play"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_margin="4.0dip"
            android:layout_marginStart="56.0dip"
            android:layout_marginTop="4.0dip"
            android:contentDescription="@string/live_broadcast_end_replay"
            android:foreground="@drawable/vkim_ripple_light_borderless"
            android:scaleType="center"
            android:src="@drawable/ic_stream_play_shadow_48" />
    </FrameLayout>

    <LinearLayout
        android:id="@id/liveEndViewLinear"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@id/live_end_broadcast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:shadowColor="#52000000"
            android:shadowDy="2.0"
            android:shadowRadius="12.0"
            android:text="@string/live_broadcast_end_finished"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <LinearLayout
            android:id="@id/live_end_broadcast_users_avatars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:orientation="horizontal" />

        <TextView
            android:id="@id/live_end_broadcast_users_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="14.0dip"
            android:layout_marginRight="32.0dip"
            android:alpha="0.6"
            android:gravity="center"
            android:maxWidth="350.0dip"
            android:shadowColor="#52000000"
            android:shadowDy="2.0"
            android:shadowRadius="12.0"
            android:textColor="@color/white"
            android:textSize="16.0sp" />

        <Button
            android:id="@id/live_end_broadcast_stat"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:text="@string/live_broadcast_end_stat"
            android:textColor="@color/blue"
            android:textSize="14.0dip" />
    </LinearLayout>

    <FrameLayout
        android:id="@id/live_end_broadcast_settings_holder"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginBottom="16.0dip"
        android:foreground="?selectableItemBackgroundBorderless">

        <ImageView
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="start|center"
            android:layout_marginLeft="16.0dip"
            android:src="@drawable/ic_settings_24" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="56.0dip"
            android:layout_marginRight="16.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/live_story_end_publish_settings"
                android:textColor="@color/white"
                android:textSize="16.0dip" />

            <TextView
                android:id="@id/live_end_broadcast_settings_selected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/live_story_end_publish_settings"
                android:textColor="@color/white_alpha60"
                android:textSize="13.0dip" />
        </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/live_end_broadcast_publish"
        style="@style/VKUIButton.White"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="12.0dip"
        android:gravity="center"
        android:textSize="16.0dip" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/live_end_broadcast_delete"
        style="@style/VKUIButton.WhiteTransparent20"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:gravity="center"
        android:text="@string/live_broadcast_end_delete_video"
        android:textColor="@color/white"
        android:textSize="16.0dip" />
</LinearLayout>