<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="132.0sp"
    android:clipToPadding="false"
    android:paddingStart="16.0dip"
    android:paddingTop="8.0dip"
    android:paddingEnd="16.0dip"
    android:paddingBottom="8.0dip">

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_contacts_permissions_border" />

    <TextView
        android:id="@id/vkim_contacts_sync_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="32.0dip"
        android:gravity="center"
        android:text="@string/vkim_contact_request_permission_label"
        android:textColor="?text_secondary"
        android:textSize="14.0sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="24.0dip"
        android:layout_marginBottom="20.0dip">

        <TextView
            android:id="@id/vkim_content"
            android:layout_width="wrap_content"
            android:layout_height="36.0sp"
            android:background="@drawable/bg_contacts_label"
            android:fontFamily="@string/fontRobotoMedium"
            android:gravity="center"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip"
            android:text="@string/vkim_contacts_allow_contacts_permission"
            android:textColor="?accent"
            android:textSize="15.0sp" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@id/vkim_progress"
            android:layout_width="36.0sp"
            android:layout_height="36.0sp"
            android:layout_gravity="center"
            app:matProg_barColor="?icon_outline_secondary"
            app:matProg_barWidth="3.0dip"
            app:matProg_progressIndeterminate="true" />
    </FrameLayout>

    <ImageView
        android:id="@id/vkim_close_btn"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="end"
        android:contentDescription="@string/vkim_accessibility_close"
        android:padding="8.0dip"
        android:src="@drawable/ic_cancel_24_in_circle_bg_transparent" />
</FrameLayout>