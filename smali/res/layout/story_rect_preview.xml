<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/iv_story_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:placeholderImage="@drawable/bg_story_add_item_bordered_4dp"
        app:placeholderImageScaleType="fitCenter" />

    <com.vk.stories.view.ClippedImageView
        android:id="@id/current_user_photo"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_margin="8.0dip"
        app:placeholderImage="@drawable/user_placeholder"
        app:placeholderImageScaleType="fitCenter" />

    <View
        android:id="@id/add"
        android:layout_width="22.0dip"
        android:layout_height="22.0dip"
        android:layout_margin="30.0dip"
        android:background="@drawable/bg_add_icon_22dp" />

    <View
        android:id="@id/gradient"
        android:layout_width="fill_parent"
        android:layout_height="72.0dip"
        android:layout_gravity="bottom"
        android:background="@drawable/scrim_bottom_opaque"
        android:backgroundTint="@color/black_alpha60" />

    <View
        android:id="@id/seen_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom" />

    <com.vk.libvideo.live.widgets.LiveShine
        android:id="@id/fl_story_live_shine"
        android:layout_width="28.0dip"
        android:layout_height="14.0dip"
        android:layout_gravity="start|bottom|center"
        android:layout_marginStart="6.0dip"
        android:layout_marginEnd="6.0dip"
        android:layout_marginBottom="38.0dip"
        android:src="@drawable/ic_badge_live_20"
        android:visibility="gone"
        app:shine_clipRadius="5.0dip" />

    <View
        android:id="@id/live_icon"
        android:layout_width="16.0dip"
        android:layout_height="16.0dip"
        android:layout_gravity="start|bottom|center"
        android:layout_marginStart="6.0dip"
        android:layout_marginBottom="37.0dip"
        android:visibility="gone" />

    <View
        android:id="@id/error_icon"
        android:layout_width="16.0dip"
        android:layout_height="16.0dip"
        android:layout_gravity="start|bottom|center"
        android:layout_marginStart="6.0dip"
        android:layout_marginBottom="37.0dip"
        android:background="@drawable/ic_badge_error_16"
        android:visibility="gone" />

    <TextView
        android:id="@id/tv_first_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="@string/font_family_medium"
        android:gravity="start"
        android:hyphenationFrequency="none"
        android:includeFontPadding="false"
        android:minHeight="14.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingBottom="20.0sp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <TextView
        android:id="@id/tv_second_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="@string/font_family_medium"
        android:gravity="start"
        android:hyphenationFrequency="none"
        android:includeFontPadding="false"
        android:minHeight="14.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingBottom="6.0dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <View
        android:id="@id/click_handler"
        android:layout_width="@dimen/story_card_rect_width"
        android:layout_height="fill_parent"
        android:background="@drawable/highlight_radius_4"
        android:importantForAccessibility="no" />
</merge>