<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6.0dip"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="224.0dip"
        android:layout_height="224.0dip">

        <com.vk.imageloader.view.VKSnippetImageView
            android:id="@id/image"
            android:layout_width="224.0dip"
            android:layout_height="224.0dip"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="224.0dip"
            android:layout_height="224.0dip"
            android:background="@drawable/attach_pretty_cards_image_bg" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/attach_pretty_cards_bottom_bg"
        android:orientation="vertical"
        android:paddingBottom="12.0dip">

        <TextView
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginEnd="12.0dip"
            android:layout_marginRight="12.0dip"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_medium"
            android:maxLines="1"
            android:textColor="?text_muted"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_marginEnd="12.0dip"
            android:layout_marginRight="12.0dip">

            <TextView
                android:id="@id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?text_tertiary"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?text_subhead"
                android:textSize="13.0sp" />
        </LinearLayout>

        <TextView
            android:id="@id/ads_button"
            style="@style/outline_button"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.0dip"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>
</LinearLayout>