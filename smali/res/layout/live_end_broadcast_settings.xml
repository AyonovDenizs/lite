<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/live_end_broadcast_settings_holder"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24.0dip"
        android:fontFamily="@string/font_family_medium"
        android:text="@string/live_story_end_publish_settings"
        android:textColor="?text_primary"
        android:textSize="20.0dip" />

    <RelativeLayout
        android:id="@id/live_end_broadcast_settings_keep_story_holder"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/highlight"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@id/live_end_broadcast_settings_keep_story_check"
            style="@style/TextStyle"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_centerVertical="true"
            android:layout_marginStart="-5.0dip"
            android:layout_marginEnd="8.0dip"
            android:background="@null"
            android:gravity="center_vertical" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/live_end_broadcast_settings_keep_story_check"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="12.0dip"
            android:text="@string/live_broadcast_switch_keep_live"
            android:textColor="?text_primary"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/live_end_broadcast_settings_keep_wall_holder"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/highlight"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@id/live_end_broadcast_settings_keep_wall_check"
            style="@style/TextStyle"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_centerVertical="true"
            android:layout_marginStart="-5.0dip"
            android:layout_marginEnd="8.0dip"
            android:background="@null"
            android:gravity="center_vertical" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/live_end_broadcast_settings_keep_wall_check"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="12.0dip"
            android:text="@string/live_broadcast_switch_keep_wall"
            android:textColor="?text_primary"
            android:textSize="16.0sp" />
    </RelativeLayout>
</LinearLayout>