<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="60.0dip"
    android:background="@drawable/highlight"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/post_side_padding"
    android:paddingTop="4.0dip"
    android:paddingRight="@dimen/post_side_padding"
    android:paddingBottom="8.0dip">

    <com.vk.core.view.PhotoStripView
        android:id="@id/photos"
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:layout_gravity="center_vertical"
        app:placeholder="?placeholder_icon_background" />

    <TextView
        android:id="@id/title"
        style="@style/VKUIText.Headline"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:lines="1" />

    <TextView
        android:id="@id/counter"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:background="@drawable/catalog_bg_counter_secondary"
        android:gravity="center"
        android:minWidth="24.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:singleLine="true"
        android:textColor="?counter_secondary_text"
        android:textSize="15.0sp" />
</LinearLayout>