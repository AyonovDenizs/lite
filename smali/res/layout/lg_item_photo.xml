<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/lg_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@color/black_blue24_alpha8"
        app:viewAspectRatio="1.0" />

    <FrameLayout
        android:id="@id/lg_counter_container"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="end">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/lg_counter"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="center"
            android:layout_margin="8.0dip"
            android:background="@drawable/bg_accent_circle"
            android:fontFamily="@string/fontRobotoMedium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="4.0dip"
            android:textColor="@color/white"
            android:visibility="gone"
            app:autoSizeMaxTextSize="15.0dip"
            app:autoSizeMinTextSize="10.0dip"
            app:autoSizeStepGranularity="1.0sp"
            app:autoSizeTextType="uniform" />
    </FrameLayout>

    <ImageView
        android:id="@id/lg_video_marker"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_gravity="start|bottom|center"
        android:layout_marginStart="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:src="@drawable/ic_video_24" />
</FrameLayout>