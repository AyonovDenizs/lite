<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/title"
        style="@style/VKUIText.Title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:gravity="center"
        android:text="@string/phone_verify_sms_title"
        android:textAlignment="center"
        android:textColor="?text_primary" />

    <TextView
        android:id="@id/subtitle"
        style="@style/VKUIText.Caption1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:text="@string/phone_verify_phone_subtitle"
        android:textColor="?destructive"
        android:visibility="gone" />

    <TextView
        android:id="@id/next_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:gravity="center"
        android:text="@string/phone_verify_sms_action"
        android:textAlignment="center"
        android:textColor="?text_subhead"
        android:textSize="14.0sp" />

    <com.vk.core.ui.edittext.PlainEditText
        android:id="@id/input_code"
        style="@style/VKUIEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:gravity="center_vertical"
        android:hint="@string/phone_verify_sms_hint"
        android:inputType="number"
        android:lines="1"
        android:maxLength="8"
        android:textColor="?text_primary" />

    <TextView
        android:id="@id/error_subtitle"
        style="@style/VKUIText.Caption1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_verify_error_incorrect_code"
        android:textColor="?destructive"
        android:visibility="gone" />

    <LinearLayout
        android:id="@id/buttons_container"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginTop="16.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@id/cancel_button"
            style="@style/secondary_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="@string/phone_verify_back"
            android:textSize="15.0sp" />

        <View
            android:id="@id/buttons_divider"
            android:layout_width="12.0dip"
            android:layout_height="0.0dip" />

        <TextView
            android:id="@id/confirm_button"
            style="@style/primary_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="@string/phone_verify_confirm"
            android:textSize="15.0sp" />
    </LinearLayout>
</LinearLayout>