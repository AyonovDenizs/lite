<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/send_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginEnd="16.0dip"
        android:fontFamily="@string/font_family_medium"
        android:gravity="start"
        android:text="@string/story_publication"
        android:textColor="?text_secondary"
        android:textSize="16.0sp" />

    <LinearLayout
        android:id="@id/story_upload_author_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/picker_white_ripple_bounded"
        android:minHeight="78.0dip"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="48.0dip"
            android:layout_height="60.0dip"
            android:layout_gravity="top"
            android:layout_marginStart="4.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="10.0dip">

            <CheckBox
                android:id="@id/check"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/author_photo"
            style="@style/UserSmallPhoto"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="top"
            android:layout_marginStart="4.0dip"
            android:layout_marginTop="18.0dip"
            android:layout_marginEnd="0.0dip"
            android:layout_marginBottom="20.0dip"
            app:placeholderImage="@drawable/photo_loading" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="12.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@id/author_title"
                style="@style/UserSmallTitle"
                android:layout_marginTop="11.0dip"
                android:text="@string/my_story"
                android:textColor="?text_primary" />

            <TextView
                android:id="@id/author_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:layout_marginEnd="16.0dip"
                android:duplicateParentState="false"
                android:ellipsize="marquee"
                android:lineSpacingExtra="2.0dip"
                android:text="@string/my_story_desc"
                android:textColor="?text_secondary"
                android:textSize="13.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_white_ripple_bounded"
        android:minHeight="78.0dip"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="48.0dip"
            android:layout_height="60.0dip"
            android:layout_gravity="top"
            android:layout_marginStart="4.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="10.0dip">

            <CheckBox
                android:id="@id/parent_check"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                android:enabled="false"
                app:buttonTint="@color/light_gray" />
        </FrameLayout>

        <com.vk.imageloader.view.VKCircleImageView
            android:id="@id/parent_photo"
            style="@style/UserSmallPhoto"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="top"
            android:layout_marginStart="4.0dip"
            android:layout_marginTop="18.0dip"
            android:layout_marginEnd="0.0dip"
            android:layout_marginBottom="20.0dip"
            app:placeholderImage="@drawable/photo_loading" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="12.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@id/parent_title"
                style="@style/UserSmallTitle"
                android:layout_marginTop="11.0dip"
                android:text="@string/my_story"
                android:textColor="?text_primary" />

            <TextView
                android:id="@id/parent_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:layout_marginEnd="16.0dip"
                android:duplicateParentState="false"
                android:ellipsize="marquee"
                android:lineSpacingExtra="2.0dip"
                android:text="@string/my_story_desc"
                android:textColor="?text_secondary"
                android:textSize="13.0dip" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/tv_send_with_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="18.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_marginBottom="10.0dip"
        android:fontFamily="@string/font_family_medium"
        android:gravity="start|center"
        android:text="@string/send_with_message"
        android:textColor="?text_secondary"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/tv_empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="72.0dip"
        android:gravity="center"
        android:textColor="?text_secondary"
        android:textSize="16.0sp" />
</LinearLayout>