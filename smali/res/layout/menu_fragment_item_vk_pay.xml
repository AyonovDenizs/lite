<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlight"
    android:gravity="center_vertical"
    android:minHeight="48.0dip"
    android:orientation="horizontal"
    android:paddingLeft="16.0dip"
    android:weightSum="1.0">

    <ImageView
        android:id="@id/iv_icon"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:scaleType="center" />

    <TextView
        android:id="@id/tv_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:singleLine="true"
        android:textColor="?text_primary"
        android:textSize="16.0sp" />

    <FrameLayout
        android:id="@id/layout_qr_button_container"
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:background="@drawable/highlight"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24.0dip"
            android:layout_gravity="center"
            android:background="@drawable/vkui_bg_button_muted_rounded"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:paddingLeft="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="4.0dip"
            android:singleLine="true"
            android:text="@string/my_qr_code"
            android:textColor="?button_muted_foreground"
            android:textSize="13.0sp" />
    </FrameLayout>

    <TextView
        android:id="@id/tv_new_badge"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:layout_marginRight="16.0dip"
        android:background="@drawable/fragment_menu_new_bg"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:paddingLeft="8.0dip"
        android:paddingTop="3.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:singleLine="true"
        android:text="@string/new_badge"
        android:textColor="?button_muted_foreground"
        android:textSize="13.0sp" />

    <TextView
        android:id="@id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="22.0dip"
        android:layout_marginRight="16.0dip"
        android:background="@drawable/fragment_menu_counter_bg"
        android:gravity="center"
        android:minWidth="22.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:singleLine="true"
        android:textColor="?counter_secondary_text"
        android:textSize="15.0sp"
        android:visibility="gone" />
</LinearLayout>