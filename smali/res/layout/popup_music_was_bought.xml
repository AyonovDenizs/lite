<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="32.0dip"
    android:layout_marginEnd="32.0dip"
    android:background="@drawable/white_rect_with_12dp_corners"
    android:maxWidth="480.0dip">

    <TextView
        android:id="@id/music_restriction_title"
        style="@style/VKUIText.Title1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginEnd="24.0dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="4"
        android:textSize="20.0sp"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toTopOf="@id/music_restriction_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginBottom="24.0dip" />

    <TextView
        android:id="@id/music_restriction_content"
        style="@style/VKUIText.Subhead1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="24.0dip"
        android:gravity="center_horizontal"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toTopOf="@id/music_restriction_action_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_restriction_title"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginBottom="24.0dip" />

    <TextView
        android:id="@id/music_restriction_action_button"
        style="@style/VKUIButton.Primary"
        android:layout_width="0.0dip"
        android:layout_height="36.0dip"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="24.0dip"
        android:layout_marginEnd="24.0dip"
        android:layout_marginBottom="24.0dip"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_restriction_content"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginBottom="24.0dip" />

    <TextView
        android:id="@id/music_restriction_button_discard"
        android:layout_width="fill_parent"
        android:layout_height="36.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="12.0dip"
        android:background="@drawable/music_selectable_bg"
        android:gravity="center"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:text="@string/music_discard_subscription"
        android:textColor="@color/blue_400"
        android:textSize="16.0dip"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_restriction_action_button" />
</androidx.constraintlayout.widget.ConstraintLayout>