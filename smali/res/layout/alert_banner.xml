<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:minWidth="200.0dip"
            android:orientation="vertical"
            android:paddingLeft="16.0dip"
            android:paddingTop="16.0dip"
            android:paddingRight="16.0dip">

            <com.vtosters.lite.ui.RoundedImageView2
                android:id="@id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:cornerRadius="2.0dip" />

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="#ff232426"
                android:textSize="14.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@id/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="4.0dip"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="3"
                android:textColor="#ff71757a"
                android:textSize="14.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.100000024px"
                android:layout_marginTop="16.0dip"
                android:background="#1f000000" />
        </LinearLayout>

        <FrameLayout
            android:id="@id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/body"
            android:layout_alignLeft="@id/body"
            android:layout_alignRight="@id/body"
            android:background="@drawable/picker_white_ripple_bounded">

            <TextView
                android:id="@id/button_title"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:textColor="@color/header_blue"
                android:textSize="16.0dip" />
        </FrameLayout>
    </RelativeLayout>
</ScrollView>