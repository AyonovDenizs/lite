<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/UserMediumRoot">

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/photo"
        style="@style/UserMediumPhoto"
        app:placeholderImage="@drawable/photo_loading" />

    <ImageView
        android:id="@id/action"
        style="@style/UserMediumAction"
        android:src="@drawable/ic_ab_write"
        android:tint="#ffabafb3" />

    <TextView
        android:id="@id/title"
        style="@style/UserMediumTitle"
        android:layout_marginTop="2.0dip" />

    <TextView
        android:id="@id/subtitle"
        style="@style/UserMediumSubtitle"
        android:lineSpacingExtra="6.0dip"
        android:singleLine="false" />

    <ImageView style="@style/Online.Medium" />
</RelativeLayout>