<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?colorPrimary">

    <LinearLayout
        android:id="@id/search_box"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_rounded_search"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/search_icon"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search_outline_16"
            android:tint="?icon_outline_secondary" />

        <com.vk.core.view.NoMenuEditText
            android:id="@id/query"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="textCapSentences|textNoSuggestions"
            android:maxLength="30"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:singleLine="true"
            android:textColor="?text_primary"
            android:textColorHint="?content_placeholder_text"
            android:textSize="16.0dip" />

        <ImageView
            android:id="@id/right_icon"
            android:layout_width="40.0dip"
            android:layout_height="36.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/highlight_unlimited"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cancel_24"
            android:tint="?icon_outline_secondary" />
    </LinearLayout>
</merge>