<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?colorPrimary">

    <LinearLayout
        android:id="@id/search_box"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_modern_search"
        android:backgroundTint="?search_bar_field_background"
        android:backgroundTintMode="multiply"
        android:contentDescription="@string/talkback_ic_search"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_icon_left"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/highlight_unlimited"
            android:contentDescription="@string/talkback_ic_back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_outline_28"
            android:tint="?icon_medium" />

        <com.vk.core.view.NoMenuEditText
            android:id="@id/query"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="textNoSuggestions"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:singleLine="true"
            android:textColor="?text_primary"
            android:textColorHint="?search_bar_field_tint"
            android:textSize="16.0dip" />

        <TextView
            android:id="@id/query_static"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:maxLines="1"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:textColor="?text_primary"
            android:textColorHint="?search_bar_field_tint"
            android:textSize="16.0dip"
            android:visibility="gone" />

        <ImageView
            android:id="@id/iv_icon_params"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/highlight_unlimited"
            android:contentDescription="@string/talkback_ic_search_params"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search_params_24"
            android:tint="?icon_medium"
            android:visibility="gone" />

        <ImageView
            android:id="@id/iv_icon_right"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/highlight_unlimited"
            android:contentDescription="@string/talkback_ic_cancel"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cancel_24"
            android:tint="?icon_medium" />

        <ImageView
            android:id="@id/iv_icon_third"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/highlight_unlimited"
            android:scaleType="centerInside"
            android:tint="?icon_medium"
            android:visibility="gone" />
    </LinearLayout>
</merge>