<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/music_empty_scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/music_empty_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="12.0dip">

        <ImageView
            android:id="@id/music_empty_icon"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            app:layout_constraintBottom_toTopOf="@id/music_empty_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@id/music_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:gravity="center"
            android:textColor="?text_primary"
            android:textSize="17.0dip"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toTopOf="@id/music_empty_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/music_empty_icon" />

        <TextView
            android:id="@id/music_empty_description"
            android:layout_width="258.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:gravity="center"
            android:lineSpacingExtra="6.0sp"
            android:textColor="?text_secondary"
            android:textSize="14.0dip"
            app:layout_constraintBottom_toTopOf="@id/music_empty_btn_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/music_empty_title" />

        <TextView
            android:id="@id/music_empty_btn_1"
            style="@style/VKUIButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_marginTop="24.0dip"
            android:textSize="15.0sp"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toTopOf="@id/music_empty_btn_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/music_empty_description" />

        <TextView
            android:id="@id/music_empty_btn_2"
            style="@style/VKUIButton.Secondary"
            android:layout_width="0.0dip"
            android:layout_height="36.0dip"
            android:layout_marginTop="12.0dip"
            android:gravity="center"
            android:textAlignment="center"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/music_empty_btn_1"
            app:layout_constraintStart_toStartOf="@id/music_empty_btn_1"
            app:layout_constraintTop_toBottomOf="@id/music_empty_btn_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>