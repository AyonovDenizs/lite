<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="212.0dip"
    android:layout_height="246.0dip"
    android:background="@drawable/friends_recomm_sync_item_bg"
    android:foreground="@drawable/highlight"
    android:paddingStart="12.0dip"
    android:paddingEnd="12.0dip">

    <ImageView
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32.0dip"
        android:background="@drawable/friends_recomm_sync_item_circle"
        android:scaleType="center"
        android:src="@drawable/ic_users_28"
        android:tint="?button_primary_background" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="104.0dip"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4.0dip"
        android:text="@string/friends_recommendations_sync_contacts_title"
        android:textColor="?button_primary_foreground"
        android:textSize="14.0dip" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="126.0dip"
        android:alpha="0.8"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3.0dip"
        android:text="@string/friends_recommendations_sync_contacts_subtitle"
        android:textColor="?button_primary_foreground"
        android:textSize="13.0dip" />

    <TextView
        android:id="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="204.0dip"
        android:background="@drawable/friends_recomm_sync_item_button"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:text="@string/enable"
        android:textAllCaps="true"
        android:textColor="?control_foreground"
        android:textSize="13.0dip"
        android:visibility="visible" />

    <LinearLayout
        android:id="@id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="204.0dip"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:scaleType="center"
            android:src="@drawable/ic_done_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:textColor="?button_primary_foreground"
            android:textSize="13.0dip" />
    </LinearLayout>
</FrameLayout>