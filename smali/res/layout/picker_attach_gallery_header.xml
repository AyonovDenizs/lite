<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/picker_attach_gallery_camera_layout"
    android:layout_width="fill_parent"
    android:layout_height="56.0dip"
    android:background="?background_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@id/picker_attach_gallery_photo_view"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:foreground="?selectableItemBackgroundBorderless">

        <com.vk.core.view.TintTextView
            android:id="@id/picker_attach_gallery_photo_text_view"
            style="@style/AttachPicker.Header.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/camera_outline_28"
            android:drawableLeft="@drawable/camera_outline_28"
            android:drawablePadding="6.0dip"
            android:text="@string/picker_photo"
            app:drawableTint="?colorAccent" />
    </FrameLayout>

    <View
        android:id="@id/picker_attach_gallery_separator_view"
        android:layout_width="0.5dip"
        android:layout_height="fill_parent"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip" />

    <FrameLayout
        android:id="@id/picker_attach_gallery_video_view"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:foreground="?selectableItemBackgroundBorderless">

        <com.vk.core.view.TintTextView
            android:id="@id/picker_attach_gallery_video_text_view"
            style="@style/AttachPicker.Header.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/videocam_outline_28"
            android:drawableLeft="@drawable/videocam_outline_28"
            android:drawablePadding="6.0dip"
            android:text="@string/picker_video"
            app:drawableTint="?colorAccent" />
    </FrameLayout>
</LinearLayout>