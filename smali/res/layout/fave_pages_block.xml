<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/cl_fave_page_header_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/fave_page_header_min_height">

    <TextView
        android:id="@id/pages_title"
        style="@style/VKUIText.Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="15.0dip"
        android:layout_marginEnd="8.0dip"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4.0sp"
        android:text="@string/fave_pages_block_title"
        android:textSize="16.0sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/pages_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.0dip"
        app:layout_constraintTop_toBottomOf="@id/pages_title" />
</androidx.constraintlayout.widget.ConstraintLayout>