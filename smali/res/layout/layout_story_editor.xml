<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/story_editor_background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.vk.attachpicker.stickers.StickersDrawingViewGroup
        android:id="@id/sdv_stickers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.vk.attachpicker.drawing.DrawingView
            android:id="@id/dv_drawing"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </com.vk.attachpicker.stickers.StickersDrawingViewGroup>

    <View
        android:id="@id/story_editor_close_background_view"
        android:layout_width="90.0dip"
        android:layout_height="104.0dip"
        android:layout_gravity="start|center|top"
        android:alpha="0.64"
        android:background="@drawable/stories_vertical_blur_left"
        android:visibility="gone" />

    <View
        android:id="@id/bottom_gradient"
        android:layout_width="fill_parent"
        android:layout_height="112.0dip"
        android:layout_gravity="bottom"
        android:alpha="0.24"
        android:background="@drawable/scrim_bottom_112" />

    <com.vk.stories.view.NoOverlappingRenderingFrameLayout
        android:id="@id/fl_top_buttons_panel"
        android:layout_width="fill_parent"
        android:layout_height="72.0dip">

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_close"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="start|center|top"
            android:layout_marginStart="8.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/accessibility_close"
            android:src="@drawable/ic_editor_cancel_outline_shadow_48" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/sharing_compact_image"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="start|center|top"
            android:layout_marginStart="56.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:src="@drawable/ic_story_repost_48"
            android:visibility="gone" />

        <com.vk.stories.view.NoOverlappingRenderingTextView
            android:id="@id/open_camera"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_gravity="center|top"
            android:layout_marginTop="14.0dip"
            android:background="@drawable/bg_open_camera"
            android:drawableStart="@drawable/ic_camera_outline_24"
            android:drawablePadding="8.0dip"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="5.0sp"
            android:paddingStart="12.0dip"
            android:paddingEnd="16.0dip"
            android:singleLine="true"
            android:text="@string/story_open_camera"
            android:textColor="@color/white"
            android:textSize="15.0sp"
            app:fontFamily="@font/roboto_medium" />
    </com.vk.stories.view.NoOverlappingRenderingFrameLayout>

    <com.vk.stories.view.NoOverlappingRenderingLinearLayout
        android:id="@id/fl_end_buttons_panel"
        android:layout_width="88.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center|top"
        android:orientation="vertical"
        android:paddingTop="8.0dip"
        android:paddingBottom="24.0dip">

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_draw"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:background="@drawable/white_ripple_circle"
            android:contentDescription="@string/story_accessibility_add_drawing"
            android:src="@drawable/ic_editor_write_shadow_48" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_stickers"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="end"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:background="@drawable/white_ripple_circle"
            android:contentDescription="@string/story_accessibility_add_stickers"
            android:src="@drawable/ic_editor_stickers_outline_shadow_48" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_text"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="end"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:background="@drawable/white_ripple_circle"
            android:contentDescription="@string/story_accessibility_add_text"
            android:src="@drawable/ic_editor_text_shadow_48" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_background"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="end"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:background="@drawable/white_ripple_circle"
            android:contentDescription="@string/story_accessibility_add_stickers"
            android:src="@drawable/ic_editor_gradient_shadow_48" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_mute"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="end"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:background="@drawable/white_ripple_circle"
            android:contentDescription="@string/story_accessibility_mute"
            android:src="@drawable/ic_editor_volume_outline_shadow_48" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_music"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="end"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:background="@drawable/white_ripple_circle"
            android:contentDescription="@string/story_accessibility_music_catalog"
            android:scaleType="center"
            android:src="@drawable/ic_music_outline_36"
            android:tint="@color/white"
            android:visibility="gone" />

        <FrameLayout
            android:id="@id/iv_bomb_wrapper"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="2.0dip"
            android:visibility="gone">

            <ImageView
                android:id="@id/iv_bomb_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_button_bomb_fill" />

            <com.vk.stories.view.NoOverlappingRenderingImageView
                android:id="@id/iv_bomb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4.0dip"
                android:layout_marginEnd="1.0dip"
                android:background="@drawable/white_ripple_circle"
                android:contentDescription="@string/story_accessibility_one_time"
                android:src="@drawable/ic_editor_bomb_outline_shadow_48" />
        </FrameLayout>

        <View
            android:id="@id/end_panel_divider"
            android:layout_width="48.0dip"
            android:layout_height="1.0dip"
            android:layout_gravity="end"
            android:layout_marginTop="8.0dip"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:alpha="0.72"
            android:background="@color/white" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_new_frame"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="end"
            android:layout_marginTop="16.0dip"
            android:layout_marginEnd="@dimen/story_editor_button_space"
            android:background="@drawable/white_ripple_circle"
            android:contentDescription="@string/story_accessibility_new_frame"
            android:src="@drawable/ic_editor_frame_add_outline_48" />
    </com.vk.stories.view.NoOverlappingRenderingLinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="340.0dip"
        android:layout_gravity="bottom"
        android:background="@drawable/scrim_bottom_16percent" />

    <com.vk.stories.view.NoOverlappingRenderingFrameLayout
        android:id="@id/fl_bottom_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@id/download_left"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="start|bottom|center"
            android:layout_marginStart="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/story_accessibility_save"
            android:src="@drawable/ic_editor_download_outline_shadow_48"
            android:visibility="gone" />

        <ViewStub
            android:id="@id/vs_bottom_panel_container"
            android:layout_width="fill_parent"
            android:layout_height="122.0dip"
            android:layout_gravity="bottom" />
    </com.vk.stories.view.NoOverlappingRenderingFrameLayout>

    <com.vk.stories.view.NoOverlappingRenderingFrameLayout
        android:id="@id/fl_drawing_undo"
        android:layout_width="fill_parent"
        android:layout_height="104.0dip"
        android:layout_gravity="top"
        android:visibility="gone">

        <View
            android:layout_width="88.0dip"
            android:layout_height="104.0dip"
            android:layout_gravity="end|center|top"
            android:alpha="0.64"
            android:background="@drawable/stories_vertical_blur_right" />

        <com.vk.stories.view.NoOverlappingRenderingImageView
            android:id="@id/iv_drawing_undo"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_gravity="end|center|top"
            android:background="@drawable/picker_white_ripple_unbounded"
            android:contentDescription="@string/story_accessibility_drawing_undo"
            android:scaleType="centerInside"
            android:src="@drawable/ic_editor_undo_outline_shadow_48"
            android:tint="@color/white" />
    </com.vk.stories.view.NoOverlappingRenderingFrameLayout>

    <com.vk.stories.view.StickerDeleteAreaView
        android:id="@id/stickers_delete_area"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="18.0dip"
        android:visibility="gone" />

    <FrameLayout
        android:id="@id/fl_stickers_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.vk.stories.view.NoOverlappingRenderingFrameLayout
        android:id="@id/fl_draw_panel"
        android:layout_width="fill_parent"
        android:layout_height="130.0dip"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <com.vk.stories.view.NoOverlappingRenderingFrameLayout
            android:layout_width="fill_parent"
            android:layout_height="96.0dip"
            android:layout_gravity="bottom">

            <com.vk.attachpicker.widget.ColorSelectorView
                android:id="@id/ccv_drawing_color_selector"
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_gravity="end|center|top"
                app:innerMarginLeft="48.0dip"
                app:whiteBorder="true" />

            <ImageView
                android:id="@id/iv_drawing_width"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_gravity="start|center|top"
                android:background="@drawable/picker_white_ripple_unbounded"
                android:contentDescription="@string/story_accessibility_drawing_width"
                android:scaleType="centerInside"
                android:src="@drawable/ic_lines_shadow_48"
                android:tint="@color/white" />

            <FrameLayout
                android:id="@id/fl_draw_nav_panel"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_gravity="bottom"
                android:background="?background_content">

                <ImageView
                    android:id="@id/iv_cancel"
                    android:layout_width="48.0dip"
                    android:layout_height="48.0dip"
                    android:layout_marginStart="8.0dip"
                    android:background="@drawable/picker_white_ripple_unbounded"
                    android:contentDescription="@string/accessibility_close"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_cancel_outline_28"
                    android:tint="?icon_medium" />

                <ImageView
                    android:id="@id/iv_apply"
                    android:layout_width="48.0dip"
                    android:layout_height="48.0dip"
                    android:layout_gravity="end|bottom|center"
                    android:layout_marginEnd="8.0dip"
                    android:background="@drawable/picker_white_ripple_unbounded"
                    android:contentDescription="@string/accessibility_done"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_done_outline_28"
                    android:tint="?accent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.vk.stories.view.BrushSelectorView
                        android:id="@id/bsv_pen"
                        android:layout_width="48.0dip"
                        android:layout_height="48.0dip"
                        android:contentDescription="@string/story_accessibility_pen"
                        app:brush_bottomDrawable="@drawable/pen_round_chrome_48"
                        app:brush_topDrawable="@drawable/pen_round_color_48"
                        app:brush_topWhiteDrawable="@drawable/pen_round_color_white_48" />

                    <com.vk.stories.view.BrushSelectorView
                        android:id="@id/bsv_marker"
                        android:layout_width="48.0dip"
                        android:layout_height="48.0dip"
                        android:contentDescription="@string/story_accessibility_marker"
                        app:brush_bottomDrawable="@drawable/pen_marker_chrome_48"
                        app:brush_topDrawable="@drawable/pen_marker_color_48"
                        app:brush_topWhiteDrawable="@drawable/pen_marker_color_white_48" />

                    <com.vk.stories.view.BrushSelectorView
                        android:id="@id/bsv_neon"
                        android:layout_width="48.0dip"
                        android:layout_height="48.0dip"
                        android:contentDescription="@string/story_accessibility_neon"
                        app:brush_bottomDrawable="@drawable/pen_glow_chrome_48"
                        app:brush_topDrawable="@drawable/pen_glow_color_48"
                        app:brush_topWhiteDrawable="@drawable/pen_glow_color_white_48" />
                </LinearLayout>
            </FrameLayout>
        </com.vk.stories.view.NoOverlappingRenderingFrameLayout>
    </com.vk.stories.view.NoOverlappingRenderingFrameLayout>

    <TextView
        android:id="@id/story_editor_music_restriction_text"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="112.0dip"
        android:background="@drawable/bg_music_restriction_text"
        android:gravity="start|center"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:text="@string/story_editor_reply_sound_off"
        android:textColor="@color/gray_100"
        android:textSize="15.0dip"
        android:visibility="gone" />
</merge>