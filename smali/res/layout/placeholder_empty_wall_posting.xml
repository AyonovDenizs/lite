<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?background_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48.0dip"
        android:layout_marginBottom="21.0dip"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_write_outline_56"
        android:tint="?content_placeholder_icon" />

    <TextView
        style="@style/VKUIText.Title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="32.0dip"
        android:layout_marginEnd="32.0dip"
        android:layout_marginBottom="9.0dip"
        android:gravity="center"
        android:lineSpacingExtra="4.0sp"
        android:text="@string/write_first_post"
        android:textColor="?text_primary" />

    <TextView
        style="@style/VKUIText.Headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32.0dip"
        android:layout_marginEnd="32.0dip"
        android:layout_marginBottom="23.0dip"
        android:gravity="center"
        android:lineSpacingExtra="4.0sp"
        android:text="@string/share_with_friends_important"
        android:textColor="?text_placeholder" />

    <TextView
        android:id="@id/button"
        style="@style/VKUIButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40.0dip"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/new_status" />
</LinearLayout>