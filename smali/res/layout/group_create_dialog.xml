<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.vtosters.lite.ui.CompoundRadioGroup
        android:id="@id/group_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="13.5dip"
        android:paddingTop="6.0dip"
        android:paddingRight="13.5dip"
        android:paddingBottom="15.5dip">

        <EditText
            android:id="@id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.0dip"
            android:hint="@string/create_community_name_hint"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="12.5dip" />

        <com.vtosters.lite.ui.CheckableRelativeLayout
            android:id="@id/group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@android:id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="3.0dip" />

            <TextView
                android:id="@id/title_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_toRightOf="@android:id/checkbox"
                android:layout_weight="1.0"
                android:text="@string/create_community_group_title"
                android:textColor="@android:color/black"
                android:textSize="17.0dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_group"
                android:layout_marginTop="2.0dip"
                android:layout_toRightOf="@android:id/checkbox"
                android:lineSpacingExtra="1.5dip"
                android:text="@string/create_community_group_description"
                android:textColor="#ff888888"
                android:textSize="15.0dip" />
        </com.vtosters.lite.ui.CheckableRelativeLayout>

        <com.vtosters.lite.ui.CheckableRelativeLayout
            android:id="@id/public_page"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@android:id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="3.0dip" />

            <TextView
                android:id="@id/title_public_page"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_toRightOf="@android:id/checkbox"
                android:layout_weight="1.0"
                android:text="@string/create_community_public_page_title"
                android:textColor="@android:color/black"
                android:textSize="17.0dip" />

            <TextView
                android:id="@id/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_public_page"
                android:layout_marginTop="2.0dip"
                android:layout_toRightOf="@android:id/checkbox"
                android:lineSpacingExtra="1.5dip"
                android:text="@string/create_community_public_page_description"
                android:textColor="#ff888888"
                android:textSize="15.0dip" />

            <Spinner
                android:id="@id/public_type"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@id/subtitle"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@android:id/checkbox"
                android:entries="@array/public_types"
                android:minHeight="40.0dip"
                android:padding="10.0dip" />
        </com.vtosters.lite.ui.CheckableRelativeLayout>

        <com.vtosters.lite.ui.CheckableRelativeLayout
            android:id="@id/event"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@android:id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="3.0dip" />

            <TextView
                android:id="@id/title_event"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_toRightOf="@android:id/checkbox"
                android:layout_weight="1.0"
                android:text="@string/create_community_event_title"
                android:textColor="@android:color/black"
                android:textSize="17.0dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_event"
                android:layout_marginTop="2.0dip"
                android:layout_toRightOf="@android:id/checkbox"
                android:lineSpacingExtra="1.5dip"
                android:text="@string/create_community_event_description"
                android:textColor="#ff888888"
                android:textSize="15.0dip" />
        </com.vtosters.lite.ui.CheckableRelativeLayout>
    </com.vtosters.lite.ui.CompoundRadioGroup>
</ScrollView>