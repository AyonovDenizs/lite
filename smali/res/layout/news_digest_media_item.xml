<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.vk.newsfeed.FrescoImageView
        android:id="@id/picture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <View
        android:id="@id/iv_amp"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="center"
        android:background="@drawable/ic_longreads_amp_24" />

    <TextView
        android:id="@id/duration"
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_gravity="end|bottom|center"
        android:layout_marginStart="4.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginEnd="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:background="@drawable/bg_video_duration_label"
        android:drawableStart="@drawable/ic_play_16dp"
        android:drawablePadding="2.0dip"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingStart="2.0dip"
        android:paddingTop="4.0dip"
        android:paddingEnd="6.0dip"
        android:paddingBottom="3.0dip"
        android:textColor="@color/white"
        android:textSize="11.0dip" />
</FrameLayout>