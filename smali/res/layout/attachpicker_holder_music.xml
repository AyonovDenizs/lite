<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="64.0dip"
    android:foreground="@drawable/highlight_post"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/attachpicker_holder_music_album_image"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="start|center"
        app:backgroundImage="@color/music_placeholder_bg"
        app:placeholderImage="@drawable/music_item_placeholder"
        app:roundedCornerRadius="4.0dip" />

    <ImageView
        android:id="@id/attachpicker_holder_music_play_image"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="start|center"
        android:background="@drawable/music_dark_round_rect"
        android:visibility="gone" />

    <TextView
        android:id="@id/attachpicker_holder_music_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom|center"
        android:layout_marginStart="60.0dip"
        android:layout_marginEnd="40.0dip"
        android:layout_marginBottom="32.0dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?text_primary"
        android:textSize="16.0dip" />

    <TextView
        android:id="@id/attachpicker_holder_music_artist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center|top"
        android:layout_marginStart="60.0dip"
        android:layout_marginTop="32.0dip"
        android:layout_marginEnd="40.0dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?text_secondary"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/attachpicker_holder_music_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:textColor="?text_secondary"
        android:textSize="13.0dip" />
</FrameLayout>