<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widgets_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/promo_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@id/separator"
        android:layout_width="fill_parent"
        android:layout_height="0.33000004dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:background="?separator_alpha" />

    <FrameLayout
        android:id="@id/button_container"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@drawable/highlight_radius_14_bottom">

        <com.vk.core.view.TintTextView
            android:id="@id/button"
            android:layout_width="wrap_content"
            android:layout_height="48.0dip"
            android:layout_gravity="center_horizontal"
            android:drawableEnd="@drawable/ic_chevron_16"
            android:drawablePadding="4.0dip"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/catalog_button_show_all"
            android:textColor="?accent"
            android:textSize="17.0sp"
            app:drawableTint="?accent" />
    </FrameLayout>
</LinearLayout>