<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?background_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@id/poll_picker_create_btn"
            style="@style/VKUIButton.Primary"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_marginEnd="16.0dip"
            android:text="@string/poll_create_btn_title"
            android:textSize="16.0dip"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/poll_picker_image"
            android:layout_width="84.0dip"
            android:layout_height="112.0dip"
            android:layout_marginTop="36.0dip"
            android:background="@drawable/poll_picker_bg"
            android:src="@drawable/bg_poll_bg_thumb"
            android:tint="?placeholder_icon_foreground_primary"
            app:layout_constraintEnd_toEndOf="@id/poll_picker_create_btn"
            app:layout_constraintStart_toStartOf="@id/poll_picker_create_btn"
            app:layout_constraintTop_toBottomOf="@id/poll_picker_create_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_marginEnd="24.0dip"
            android:text="@string/poll_picker_description"
            android:textColor="?text_placeholder"
            android:textSize="16.0dip"
            app:layout_constraintEnd_toEndOf="@id/poll_picker_image"
            app:layout_constraintStart_toStartOf="@id/poll_picker_image"
            app:layout_constraintTop_toBottomOf="@id/poll_picker_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>