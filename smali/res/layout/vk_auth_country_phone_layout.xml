<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.vk.auth.ui.VkAuthTintTextView
            android:id="@id/choose_country"
            style="@style/VkAuth.EnterPhoneFragmentField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vk_auth_bg_edittext_top"
            android:drawableEnd="@drawable/vk_ic_chevron_16"
            android:padding="11.0dip"
            android:paddingStart="12.0dip"
            android:paddingTop="13.0dip"
            app:vk_drawable_end_tint="?vk_icon_outline_secondary" />

        <LinearLayout
            android:id="@id/phone_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vk_auth_bg_edittext_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@id/phone_code"
                style="@style/VkAuth.EnterPhoneFragmentField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16.0dip"
                android:paddingTop="9.5dip"
                android:paddingEnd="16.0dip"
                android:paddingBottom="11.0dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="9.5dip"
                android:layout_marginBottom="10.0dip"
                android:background="?vk_separator_alpha" />

            <EditText
                android:id="@id/phone_edit_text"
                style="@style/VkAuth.EnterPhoneFragmentField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/vk_auth_sign_up_phone_hint"
                android:inputType="number"
                android:lines="1"
                android:maxLength="17"
                android:paddingStart="11.5dip"
                android:paddingTop="9.5dip"
                android:paddingBottom="11.0dip"
                android:textCursorDrawable="@drawable/vk_auth_edittext_cursor" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@id/separator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="1.0dip"
        android:layout_marginEnd="1.0dip"
        android:background="?vk_separator_alpha" />
</merge>