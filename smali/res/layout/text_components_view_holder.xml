    <TextView
        style="@style/VKUIText.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4.0dip"
        android:text="Text" />

    <TextView
        style="@style/VKUIText.Subhead1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4.0dip"
