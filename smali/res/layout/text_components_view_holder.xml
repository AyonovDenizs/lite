        android:paddingBottom="4.0dip"
        android:text="Subhead 2" />

    <TextView
        style="@style/VKUIText.Caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4.0dip"
        android:text="Caption 1" />

    <TextView
        style="@style/VKUIText.Caption2"
        android:layout_width="wrap_content"
