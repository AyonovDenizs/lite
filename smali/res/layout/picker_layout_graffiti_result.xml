<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/fl_graffiti_preview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#66000000"
    android:orientation="vertical">

    <FrameLayout
        android:id="@id/fl_graffiti_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16.0dip">

            <com.vk.imageloader.view.VKImageView
                android:id="@id/iv_preview"
                android:layout_width="wrap_content"
                android:layout_height="0.0px"
                android:layout_weight="1.0"
                android:background="@drawable/picker_bg_graffiti_preview_top"
                android:paddingLeft="32.0dip"
                android:paddingTop="32.0dip"
                android:paddingRight="32.0dip"
                android:paddingBottom="16.0dip"
                app:actualImageScaleType="centerInside" />

            <TextView
                android:id="@id/tv_send_button"
                android:layout_width="fill_parent"
                android:layout_height="72.0dip"
                android:background="@drawable/picker_bg_graffiti_preview_bottom"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:paddingLeft="24.0dip"
                android:paddingRight="24.0dip"
                android:paddingBottom="24.0dip"
                android:singleLine="true"
                android:text="@string/picker_send"
                android:textAllCaps="true"
                android:textColor="#ffffffff"
                android:textSize="14.0sp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>