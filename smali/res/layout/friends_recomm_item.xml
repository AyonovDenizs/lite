<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/container"
    android:layout_width="138.0dip"
    android:layout_height="246.0dip"
    android:foreground="@drawable/highlight_radius_4">

    <com.vk.imageloader.view.VKSnippetImageView
        android:id="@id/photo"
        android:layout_width="138.0dip"
        android:layout_height="138.0dip"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="66.0dip"
        android:layout_marginTop="138.0dip"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="9.0dip"
        android:paddingBottom="8.0dip">

        <com.vk.core.widget.FluidHorizontalLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip">

            <TextView
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/font_family_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="?text_primary"
                android:textSize="13.0dip"
                android:textStyle="normal"
                app:vk_layout_isFluid="true" />

            <View
                android:id="@id/icon"
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4.0dip"
                android:layout_marginTop="-2.0dip" />
        </com.vk.core.widget.FluidHorizontalLayout>

        <TextView
            android:id="@id/subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:singleLine="true"
            android:textColor="?text_subhead"
            android:textSize="12.0dip"
            android:visibility="visible" />

        <TextView
            android:id="@id/subtitle2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:singleLine="true"
            android:textColor="?text_subhead"
            android:textSize="12.0dip"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@id/button_hide"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:layout_gravity="end"
        android:contentDescription="@string/accessibility_hide"
        android:scaleType="center"
        android:src="@drawable/ic_dismiss_circle_dark_20" />

    <FrameLayout
        android:id="@id/button"
        style="@style/BlueButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="204.0dip"
        android:layout_marginRight="12.0dip"
        android:background="@drawable/vkui_bg_button_primary"
        android:contentDescription="@string/accessibility_add_friend"
        android:minHeight="30.0dip">

        <TextView
            android:id="@id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8.0dip"
            android:ellipsize="end"
            android:fontFamily="@string/font_family_medium"
            android:text="@string/add"
            android:textAllCaps="true"
            android:textColor="?button_primary_foreground"
            android:textSize="12.0dip" />
    </FrameLayout>

    <TextView
        android:id="@id/done"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="204.0dip"
        android:layout_marginRight="12.0dip"
        android:gravity="center"
        android:scaleType="center"
        android:singleLine="true"
        android:text="@string/friend_req_sent"
        android:textColor="?text_subhead"
        android:textSize="12.0dip"
        android:visibility="gone" />
</FrameLayout>