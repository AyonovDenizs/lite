<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="20.0dip"
    android:paddingTop="16.0dip"
    android:paddingEnd="20.0dip">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/fontRobotoMedium"
        android:gravity="center"
        android:textColor="?text_primary"
        android:textSize="20.0sp" />

    <TextView
        android:id="@id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:fontFamily="@string/fontRobotoRegular"
        android:gravity="center"
        android:lineSpacingExtra="2.0sp"
        android:textColor="?text_subhead"
        android:textSize="14.0sp" />

    <Button
        android:id="@id/positive_button"
        style="@style/VKUIButton.Primary.Flat"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:layout_marginTop="16.0dip"
        android:textSize="15.0sp" />

    <Button
        android:id="@id/negative_button"
        style="@style/VKUIButton.Tertiary"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:layout_marginTop="8.0dip"
        android:textSize="15.0sp" />
</LinearLayout>