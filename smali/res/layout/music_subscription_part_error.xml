<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@id/music_subscription_error_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginEnd="24.0dip"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?text_primary"
        android:textSize="22.0sp"
        app:fontFamily="@font/tt_commons_demi_bold"
        app:layout_constraintBottom_toTopOf="@id/music_subscription_error_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@id/music_subscription_error_description"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="23.0dip"
        android:layout_marginEnd="24.0dip"
        android:gravity="center_horizontal"
        android:minHeight="30.0dip"
        android:textColor="?text_secondary"
        android:textSize="15.0sp"
        app:layout_constraintBottom_toTopOf="@id/music_subscription_error_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_subscription_error_title" />

    <TextView
        android:id="@id/music_subscription_error_more"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="23.0dip"
        android:layout_marginEnd="24.0dip"
        android:background="@drawable/link_drawable"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="@string/music_subscription_screen_error_link_title"
        android:textColor="?accent"
        android:textSize="14.0sp"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_subscription_error_description"
        app:layout_constraintWidth_default="wrap" />
</androidx.constraintlayout.widget.ConstraintLayout>