<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?background_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="8.0dip">

        <LinearLayout
            android:id="@id/linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@id/title"
                style="@style/CardTextEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/create_album_title"
                android:paddingLeft="@dimen/post_side_padding"
                android:paddingTop="12.0dip"
                android:paddingRight="@dimen/post_side_padding"
                android:paddingBottom="12.0dip" />

            <EditText
                android:id="@id/description"
                style="@style/CardTextEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/create_album_description"
                android:minLines="3"
                android:paddingLeft="@dimen/post_side_padding"
                android:paddingTop="12.0dip"
                android:paddingRight="@dimen/post_side_padding"
                android:paddingBottom="12.0dip"
                android:textColor="?text_muted"
                android:textColorHint="?text_secondary" />

            <LinearLayout
                android:id="@id/album_privacy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/highlight"
                android:orientation="vertical"
                android:paddingLeft="@dimen/post_side_padding"
                android:paddingTop="16.0dip"
                android:paddingRight="@dimen/post_side_padding"
                android:paddingBottom="16.0dip">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_album_privacy"
                    android:textColor="?text_muted"
                    android:textSize="16.0dip" />

                <TextView
                    android:id="@id/album_privacy_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="@string/privacy_all"
                    android:textColor="?text_secondary"
                    android:textSize="14.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/album_privacy_comment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/highlight"
                android:orientation="vertical"
                android:paddingLeft="@dimen/post_side_padding"
                android:paddingTop="16.0dip"
                android:paddingRight="@dimen/post_side_padding"
                android:paddingBottom="16.0dip">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_album_privacy_comments"
                    android:textColor="?text_muted"
                    android:textSize="16.0dip" />

                <TextView
                    android:id="@id/album_privacy_comment_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="@string/privacy_all"
                    android:textColor="?text_secondary"
                    android:textSize="14.0dip" />
            </LinearLayout>

            <FrameLayout
                android:id="@id/photo_album_community_privacy_wrap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/post_side_padding"
                android:paddingRight="@dimen/post_side_padding">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@id/photo_album_community_privacy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:color/transparent"
                    android:drawablePadding="16.0dip"
                    android:gravity="center_vertical"
                    android:minHeight="56.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:text="@string/photo_album_community_privacy"
                    android:textColor="?text_primary"
                    android:textSize="16.0dip" />
            </FrameLayout>

            <FrameLayout
                android:id="@id/photo_album_community_privacy_comment_wrap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/post_side_padding"
                android:paddingRight="@dimen/post_side_padding">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@id/photo_album_community_privacy_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:color/transparent"
                    android:drawablePadding="16.0dip"
                    android:gravity="center_vertical"
                    android:minHeight="56.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:text="@string/photo_album_community_privacy_comment"
                    android:textColor="?text_primary"
                    android:textSize="16.0dip" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>