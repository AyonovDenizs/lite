<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/search_extended"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="24.0dip">

        <com.vtosters.lite.ui.BadooTextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center_vertical"
            android:text="@string/region"
            android:textColor="#ff6a6f75"
            android:textSize="14.0dip"
            app:typeface="Medium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal">

            <Spinner
                android:id="@id/country_spinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:paddingRight="16.0dip" />

            <Button
                android:id="@id/city_btn"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="4.0dip"
                android:layout_weight="1.0"
                android:enabled="false"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/edit_choose_city"
                android:textSize="16.0dip" />
        </LinearLayout>

        <com.vtosters.lite.ui.BadooTextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="8.0dip"
            android:gravity="center_vertical"
            android:text="@string/gender"
            android:textColor="#ff6a6f75"
            android:textSize="14.0dip"
            app:typeface="Medium" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@id/gender_any"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:checked="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/gender_any"
                android:textColor="#ff2e3033"
                android:textSize="14.0dip" />

            <RadioButton
                android:id="@id/gender_male"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/signup_male"
                android:textColor="#ff2e3033"
                android:textSize="14.0dip" />

            <RadioButton
                android:id="@id/gender_female"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/signup_female"
                android:textColor="#ff2e3033"
                android:textSize="14.0dip" />
        </RadioGroup>

        <com.vtosters.lite.ui.BadooTextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="8.0dip"
            android:gravity="center_vertical"
            android:text="@string/age"
            android:textColor="#ff6a6f75"
            android:textSize="14.0dip"
            app:typeface="Medium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal">

            <Spinner
                android:id="@id/age_from"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:gravity="center|left"
                android:minWidth="40.0dip" />

            <View
                android:layout_width="10.0dip"
                android:layout_height="1.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8.0dip"
                android:background="#ff909499" />

            <Spinner
                android:id="@id/age_to"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:minWidth="40.0dip" />
        </LinearLayout>

        <com.vtosters.lite.ui.BadooTextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="8.0dip"
            android:gravity="center_vertical"
            android:text="@string/profile_relation"
            android:textColor="#ff6a6f75"
            android:textSize="14.0dip"
            app:typeface="Medium" />

        <Spinner
            android:id="@id/relation_spinner"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_weight="1.0"
            android:gravity="center|left" />
    </LinearLayout>
</ScrollView>