<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="44.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_weight="1.0">

        <ImageView
            android:id="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            android:maxWidth="240.0dip"
            android:maxHeight="240.0dip"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <TextView
        android:id="@id/title"
        style="@style/VKUIText.Title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24.0dip"
        android:layout_marginRight="24.0dip"
        android:ellipsize="end"
        android:fontFamily="@font/tt_commons_demi_bold"
        android:gravity="center"
        android:lineSpacingExtra="-2.0sp"
        android:maxLines="2"
        android:textColor="?text_primary"
        android:textSize="24.0sp"
        app:autoSizeMaxTextSize="24.0sp"
        app:autoSizeMinTextSize="20.0sp"
        app:autoSizeStepGranularity="1.0sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@id/text"
        style="@style/VKUIText.Headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="24.0dip"
        android:layout_marginBottom="44.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="6"
        android:textColor="?text_subhead"
        app:autoSizeMaxTextSize="16.0sp"
        app:autoSizeMinTextSize="12.0sp"
        app:autoSizeStepGranularity="1.0sp"
        app:autoSizeTextType="uniform" />
</LinearLayout>