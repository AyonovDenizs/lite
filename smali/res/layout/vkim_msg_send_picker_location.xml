<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="64.0dip"
    android:background="?selectableItemBackground"
    android:paddingStart="16.0dip"
    android:paddingTop="8.0dip"
    android:paddingEnd="16.0dip"
    android:paddingBottom="8.0dip">

    <com.vk.im.ui.views.FrescoImageView
        android:id="@id/vkim_location_ic"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginEnd="12.0dip"
        app:placeholderImage="@drawable/ic_place_48"
        app:vkim_isCircle="true"
        app:vkim_scaleType="center_crop" />

    <TextView
        android:id="@id/vkim_location_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_toEndOf="@id/vkim_location_ic"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="?text_primary"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/vkim_location_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vkim_location_title"
        android:layout_marginTop="0.5dip"
        android:layout_toStartOf="@id/vkim_location_info"
        android:layout_toEndOf="@id/vkim_location_ic"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="?text_subhead"
        android:textSize="14.0sp" />

    <com.vk.core.view.TintTextView
        android:id="@id/vkim_location_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vkim_location_subtitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10.0dip"
        android:drawableRight="@drawable/ic_user_16"
        android:drawablePadding="2.0dip"
        android:ellipsize="end"
        android:gravity="end|center"
        android:singleLine="true"
        android:textColor="?text_subhead"
        android:textSize="12.0sp"
        app:drawableRightTint="?text_subhead" />
</RelativeLayout>