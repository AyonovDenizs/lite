<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76.0dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@id/qr"
            android:layout_width="128.0dip"
            android:layout_height="128.0dip" />

        <TextView
            android:id="@id/title"
            style="@style/VKUIText.Title1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:gravity="center"
            android:lineSpacingExtra="0.0sp"
            android:maxLines="3"
            android:textColor="?text_primary" />

        <TextView
            android:id="@id/message"
            style="@style/VKUIText.Subhead2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:gravity="center_horizontal"
            android:text="@string/point_camera_at_qr"
            android:textColor="?text_subhead" />
    </LinearLayout>

    <TextView
        android:id="@id/positive_button"
        style="@style/secondary_button"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_gravity="bottom"
        android:layout_marginTop="32.0dip"
        android:text="@string/done"
        android:textColor="?button_tertiary_foreground"
        android:textSize="16.0sp" />
</FrameLayout>