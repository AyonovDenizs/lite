<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginEnd="56.0dip"
        android:layout_marginRight="56.0dip"
        android:orientation="vertical">

        <com.vtosters.lite.ui.BadooTextView
            android:id="@id/sharing_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sharing_title1"
            android:textColor="?text_muted"
            android:textSize="16.0dip"
            app:typeface="Medium" />

        <TextView
            android:id="@id/sharing_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="?text_secondary"
            android:textSize="14.0dip"
            android:visibility="gone" />
    </LinearLayout>

    <ImageButton
        android:id="@id/sharing_search_button"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="end|center"
        android:layout_marginEnd="4.0dip"
        android:layout_marginRight="4.0dip"
        android:contentDescription="@string/search"
        android:tint="?icon_medium"
        app:srcCompat="@drawable/ic_search_24" />

    <ImageButton
        android:id="@id/sharing_settings_button"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="end|center"
        android:layout_marginEnd="4.0dip"
        android:contentDescription="@string/menu_settings"
        android:scaleType="center"
        android:src="@drawable/ic_settings_24"
        android:tint="@color/gray_300"
        android:visibility="gone" />
</FrameLayout>