<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widgets_gray"
    android:minHeight="48.0dip">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/info_icon"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginStart="10.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="12.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="6.0dip" />

    <TextView
        android:id="@id/info_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.0dip"
        android:layout_marginTop="13.0dip"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:maxLines="3"
        android:textColor="?text_primary"
        android:textSize="15.0sp"
        app:layout_constraintEnd_toStartOf="@id/go_button"
        app:layout_constraintStart_toEndOf="@id/info_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/info_subtitle"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_marginBottom="12.0dip"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:textColor="?text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/go_button"
        app:layout_constraintStart_toStartOf="@id/info_title"
        app:layout_constraintTop_toBottomOf="@id/info_title" />

    <ImageView
        android:id="@id/go_button"
        android:layout_width="16.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginEnd="10.0dip"
        android:layout_marginBottom="12.0dip"
        android:src="@drawable/ic_chevron_24"
        android:tint="?icon_tertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/shadow"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:background="@drawable/highlight_radius_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>