<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/money_transfer_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38.0dip"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip">

        <TextView
            android:id="@id/tv_title"
            style="@style/VKUIText.Deprecated.Subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="1.0dip"
            android:text="@string/money_transfer_send_money_to_friend_desc_title" />

        <TextView
            android:id="@id/tv_description"
            style="@style/VKUIText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="4.0dip"
            android:fontFamily="@string/fontRobotoRegular"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="1.0dip"
            android:text="@string/money_transfer_send_money_to_friend_desc_subtitle"
            android:textColor="?text_subhead" />

        <TextView
            android:id="@id/tv_read_more"
            android:layout_width="110.0dip"
            android:layout_height="30.0dip"
            android:background="@drawable/highlight"
            android:fontFamily="@string/fontRobotoMedium"
            android:gravity="center"
            android:text="@string/money_transfer_read_more"
            android:textColor="?accent"
            android:textSize="14.0sp" />
    </LinearLayout>
</LinearLayout>