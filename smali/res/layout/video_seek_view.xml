<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip"
    android:gravity="end|center"
    android:orientation="horizontal">

    <android.widget.Space
        android:id="@id/space"
        android:layout_width="12.0dip"
        android:layout_height="0.0dip" />

    <TextView
        android:id="@id/time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dip"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="#ccffffff"
        android:textSize="12.0dip" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@id/seek_bar"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:contentDescription="@string/video_accessibility_rewinding"
        android:maxHeight="3.0dip"
        android:minHeight="3.0dip"
        android:progressDrawable="@drawable/progress_video"
        android:splitTrack="false"
        android:thumb="@drawable/ic_video_progress_thumb_24" />

    <TextView
        android:id="@id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dip"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="#ccffffff"
        android:textSize="12.0dip" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/settings"
        android:layout_width="48.0dip"
        android:layout_height="fill_parent"
        android:layout_marginStart="2.0dip"
        android:background="@drawable/highlight_circle_white"
        android:contentDescription="@string/accessibility_settings"
        android:scaleType="center"
        android:src="@drawable/ic_settings_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/resize"
        android:layout_width="48.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/highlight_circle_white"
        android:contentDescription="@string/video_accessibility_resize"
        android:scaleType="center"
        android:src="@drawable/ic_video_fill_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/fullscreen"
        android:layout_width="48.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/highlight_circle_white"
        android:contentDescription="@string/video_accessibility_full_screen_mode"
        android:scaleType="center"
        android:src="@drawable/ic_fullscreen_24" />
</merge>