<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16.0dip">

        <TextView
            android:id="@id/vkim_send_money_btn"
            android:layout_width="0.0dip"
            android:layout_height="48.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/vkim_bg_accent_corners_8"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/vkim_send_money"
            android:textColor="@color/white"
            android:textSize="16.0sp" />

        <Space
            android:id="@id/vkim_space"
            android:layout_width="16.0dip"
            android:layout_height="1.0dip" />

        <TextView
            android:id="@id/vkim_request_money_btn"
            android:layout_width="0.0dip"
            android:layout_height="48.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/vkim_bg_secondary_corners_8"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/vkim_request_money"
            android:textColor="?button_primary_foreground"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38.0dip"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip">

        <TextView
            android:id="@id/tv_title"
            style="@style/VKUIText.Deprecated.Subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="1.0dip" />

        <TextView
            android:id="@id/tv_description"
            style="@style/VKUIText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="4.0dip"
            android:fontFamily="@string/fontRobotoRegular"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="1.0dip"
            android:textColor="@color/subhead_gray" />

        <TextView
            android:id="@id/tv_read_more"
            android:layout_width="110.0dip"
            android:layout_height="30.0dip"
            android:background="@drawable/highlight"
            android:fontFamily="@string/fontRobotoMedium"
            android:gravity="center"
            android:text="@string/money_transfer_read_more"
            android:textColor="?button_tertiary_foreground"
            android:textSize="14.0sp" />
    </LinearLayout>
</LinearLayout>