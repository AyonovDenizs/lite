<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@id/onboard_page_holder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@id/onboard_page_image"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="16.0dip"
            android:layout_weight="1.0"
            android:scaleType="fitEnd" />

        <TextView
            android:id="@id/onboard_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="32.0dip"
            android:layout_marginRight="32.0dip"
            android:layout_weight="0.0"
            android:ellipsize="end"
            android:gravity="center"
            android:lineHeight="22.0dip"
            android:maxLines="3"
            android:minHeight="72.0dip"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="16.0dip" />
    </LinearLayout>
</FrameLayout>