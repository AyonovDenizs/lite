<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_contacts_outline_64"
        android:tint="?icon_outline_secondary" />

    <TextView
        android:id="@id/vkim_contacts_no_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22.0dip"
        android:fontFamily="@string/fontRobotoMedium"
        android:text="@string/vkim_contacts_no_contacts"
        android:textColor="?text_primary"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/vkim_contacts_no_permission_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginEnd="40.0dip"
        android:gravity="center"
        android:lineSpacingExtra="1.0sp"
        android:text="@string/vkim_contacts_no_permission_label"
        android:textColor="?text_placeholder"
        android:textSize="14.0sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24.0dip"
        android:layout_marginBottom="20.0dip">

        <TextView
            android:id="@id/vkim_content"
            android:layout_width="wrap_content"
            android:layout_height="36.0sp"
            android:background="@drawable/bg_contacts_label"
            android:fontFamily="@string/fontRobotoMedium"
            android:gravity="center"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip"
            android:text="@string/vkim_contacts_allow_contacts_permission"
            android:textColor="?accent"
            android:textSize="15.0sp" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@id/vkim_progress"
            android:layout_width="36.0sp"
            android:layout_height="36.0sp"
            android:layout_gravity="center"
            app:matProg_barColor="?icon_outline_secondary"
            app:matProg_barWidth="3.0dip"
            app:matProg_progressIndeterminate="true" />
    </FrameLayout>
</LinearLayout>