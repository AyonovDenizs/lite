<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.vk.core.view.VKTabLayout
        android:id="@id/feed_likes_tablayout"
        style="?tabBarTheme"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/feed_likes_filter_height"
        android:layout_weight="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorColor="?accent"
        app:tabMaxWidth="0.0dip"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="?accent"
        app:tabTextColor="?text_secondary" />
</merge>