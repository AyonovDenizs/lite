<?xml version="1.0" encoding="utf-8"?>
<com.vtosters.lite.ui.OverlayLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    app:overlay="@drawable/highlight"
    app:padOverlay="true">

    <com.vk.imageloader.view.VKOverlayImageView
        android:id="@id/iv_goods_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:overlay="@drawable/market_image_overlay"
        app:placeholderImage="@drawable/ic_market_outline_96_placeholder"
        app:placeholderImageScaleType="fitXY" />

    <TextView
        android:id="@id/tv_goods_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="7.0dip"
        android:textColor="?text_secondary"
        android:textSize="13.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="2.0dip"
        android:paddingBottom="12.0dip">

        <TextView
            android:id="@id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="?text_muted"
            android:textSize="18.0sp" />

        <TextView
            android:id="@id/tv_goods_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7.0dip"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="?text_secondary"
            android:textSize="14.0sp" />
    </LinearLayout>
</com.vtosters.lite.ui.OverlayLinearLayout>