<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/UserSmallRoot">

    <com.vk.imageloader.view.VKCircleImageView
        android:id="@id/photo"
        style="@style/UserSmallPhoto"
        app:placeholderImage="@drawable/user_placeholder" />

    <CheckBox
        android:id="@id/check"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@id/title"
        style="@style/UserSmallTitle"
        android:layout_toStartOf="@id/check"
        android:textColor="?text_muted" />

    <ImageView style="@style/Online.Small" />
</RelativeLayout>