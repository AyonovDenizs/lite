<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.vk.music.view.CommunityImageView
        android:id="@id/community_image"
        android:layout_width="@dimen/music_community_image"
        android:layout_height="@dimen/music_community_image"
        app:placeholderImage="@color/music_placeholder_bg"
        app:roundAsCircle="true" />

    <TextView
        android:id="@id/community_title"
        style="@style/MusicTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textSize="12.0dip"
        android:textStyle="normal" />
</LinearLayout>