<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ll_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="8.0dip"
        android:paddingEnd="8.0dip">

        <ImageView
            android:id="@id/iv_money_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_money_transfer_56"
            android:tint="?accent" />

        <TextView
            style="@style/VKUIText.Title1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:gravity="center_horizontal"
            android:text="@string/money_transfer_send_money_to_friend_desc_title"
            android:textColor="?text_primary" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:layout_marginBottom="12.0dip"
            android:fontFamily="@string/fontRobotoRegular"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="1.0sp"
            android:text="@string/money_transfer_send_money_to_friend_desc_subtitle"
            android:textColor="?text_secondary"
            android:textSize="16.0sp" />

        <TextView
            android:id="@id/tv_read_more"
            android:layout_width="112.0dip"
            android:layout_height="36.0dip"
            android:fontFamily="@string/fontRobotoMedium"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="5.0sp"
            android:text="@string/money_transfer_read_more"
            android:textColor="?accent"
            android:textSize="15.0sp" />

        <LinearLayout
            android:id="@id/ll_friends_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <com.vk.im.ui.views.avatars.StackAvatarView
                android:id="@id/friends_photos2"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                app:vkim_drawingOrder="usual"
                app:vkim_extraColor="?icon_secondary"
                app:vkim_iconOffset="-6.0dip"
                app:vkim_iconSize="32.0dip"
                app:vkim_strokeColor="?modal_card_background"
                app:vkim_strokeWidth="2.0dip"
                app:vkim_useExtraView="true" />

            <TextView
                android:id="@id/friends_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:fontFamily="@string/fontRobotoRegular"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:textColor="?text_subhead"
                android:textSize="13.0sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/btn_send"
        style="@style/primary_button"
        android:layout_width="@dimen/money_transfer_btn_width"
        android:layout_height="44.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="12.0dip"
        android:text="@string/money_transfer_send_money_to_friend"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/btn_link"
        style="@style/secondary_button"
        android:layout_width="@dimen/money_transfer_btn_width"
        android:layout_height="44.0dip"
        android:layout_marginBottom="56.0dip"
        android:text="@string/money_transfer_link"
        android:textSize="16.0sp" />
</LinearLayout>