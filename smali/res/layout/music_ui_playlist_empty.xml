<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/add_audio_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="32.0dip"
    android:tag="centerInRecycler">

    <TextView
        android:id="@id/playlist_empty_label"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/music_own_playlist_empty"
        android:textColor="?text_secondary"
        app:layout_constraintBottom_toTopOf="@id/playlist_empty_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@id/playlist_empty_btn"
        style="@style/VKUIButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip"
        android:gravity="center"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:text="@string/music_title_attach_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_empty_label" />
</androidx.constraintlayout.widget.ConstraintLayout>