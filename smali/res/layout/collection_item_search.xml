<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44.0dip"
    android:layout_gravity="center_vertical"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip">

    <EditText
        android:id="@id/collection_item_search_edit"
        style="@style/TextStyle"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:hint=""
        android:paddingLeft="96.0dip"
        android:paddingRight="96.0dip"
        android:singleLine="true"
        android:textColor="?text_muted"
        android:textColorHint="?text_placeholder"
        android:textSize="16.0dip"
        android:textStyle="normal" />

    <TextView
        android:id="@id/collection_item_search_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginLeft="12.0dip"
        android:layout_marginBottom="1.0dip"
        android:text="hint"
        android:textColor="@color/gray_300"
        android:textSize="16.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:id="@id/collection_item_search_buttons"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center|right"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:paddingLeft="56.0dip">

        <ImageButton
            android:id="@id/collection_item_search_user"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dark_ripple_unbounded"
            android:contentDescription="@string/accessibility_user_or_group_link"
            android:src="@drawable/ic_mention_24"
            android:tint="@color/gray" />

        <ImageButton
            android:id="@id/collection_item_search_clear"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4.0dip"
            android:background="@drawable/dark_ripple_unbounded"
            android:src="@drawable/ic_cancel_24"
            android:tint="@color/gray" />
    </LinearLayout>
</FrameLayout>