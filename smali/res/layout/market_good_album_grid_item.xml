<?xml version="1.0" encoding="utf-8"?>
<com.vtosters.lite.ui.OverlayLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    app:overlay="@drawable/highlight"
    app:padOverlay="true">

    <com.vk.imageloader.view.VKOverlayImageView
        android:id="@android:id/icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:actualImageScaleType="focusCrop"
        app:overlay="@drawable/market_image_overlay"
        app:placeholderImage="@drawable/ic_goods_collection_56_placeholder"
        app:placeholderImageScaleType="fitXY" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="7.0dip"
        android:textColor="?text_muted"
        android:textSize="14.0dip" />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="2.0dip"
        android:paddingBottom="8.0dip"
        android:textColor="?text_secondary"
        android:textSize="13.0dip" />
</com.vtosters.lite.ui.OverlayLinearLayout>