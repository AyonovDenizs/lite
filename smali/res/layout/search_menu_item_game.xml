<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlight"
    android:gravity="center_vertical"
    android:minHeight="60.0dip"
    android:orientation="horizontal"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip"
    android:weightSum="1.0">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/photo"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:scaleType="center"
        app:emptyImagePlaceholder="@drawable/placeholder_game_rounded"
        app:placeholderImage="@drawable/default_placeholder_10"
        app:roundedCornerRadius="10.0dip" />

    <TextView
        android:id="@id/title"
        style="@style/VKUIText.Headline"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.0dip"
        android:layout_marginEnd="18.0dip"
        android:layout_weight="1.0"
        android:singleLine="true" />

    <ImageView
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:importantForAccessibility="no"
        android:scaleType="center"
        android:src="@drawable/ic_chevron_circle_outline_28"
        android:tint="?accent" />
</LinearLayout>