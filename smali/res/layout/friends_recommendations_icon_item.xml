<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:minHeight="48.0dip">

    <ImageView
        android:id="@id/icon"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16.0dip"
        android:contentDescription="@null"
        android:scaleType="center"
        android:tint="?icon_secondary" />

    <TextView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="64.0dip"
        android:singleLine="true"
        android:textColor="?text_muted"
        android:textSize="16.0sp" />

    <com.vk.imageloader.view.VKImageView
        android:id="@id/icon1"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_gravity="end|center"
        android:layout_marginEnd="16.0dip"
        android:background="@drawable/friends_recommendations_circle"
        android:padding="2.0dip"
        android:visibility="gone"
        app:roundedCornerRadius="16.0dip" />

    <com.vk.imageloader.view.VKImageView
        android:id="@id/icon2"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_gravity="end|center"
        android:layout_marginEnd="40.0dip"
        android:background="@drawable/friends_recommendations_circle"
        android:padding="2.0dip"
        android:visibility="gone"
        app:roundedCornerRadius="16.0dip" />

    <com.vk.imageloader.view.VKImageView
        android:id="@id/icon3"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_gravity="end|center"
        android:layout_marginEnd="64.0dip"
        android:background="@drawable/friends_recommendations_circle"
        android:padding="2.0dip"
        android:visibility="gone"
        app:roundedCornerRadius="16.0dip" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@drawable/highlight" />
</FrameLayout>