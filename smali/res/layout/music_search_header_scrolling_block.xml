<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@id/header"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip">

        <TextView
            android:id="@id/music_block_title"
            style="@style/MusicTextStyle.HeaderSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.0dip"
            android:fontFamily="@string/font_family_medium" />

        <TextView
            android:id="@id/music_show_all_btn"
            style="@style/TextButton.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:fontFamily="@string/font_family_medium"
            android:text="@string/music_button_show_all" />
    </FrameLayout>

    <me.grishka.appkit.views.UsableRecyclerView
        android:id="@id/list"
        android:layout_width="fill_parent"
        android:layout_height="195.0dip"
        android:layout_marginBottom="8.0dip"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip" />

    <View
        android:id="@id/bottom_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginBottom="7.5dip"
        android:alpha="0.12"
        android:background="#ff000000" />
</LinearLayout>