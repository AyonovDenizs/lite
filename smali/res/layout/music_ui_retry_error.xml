<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/error_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16.0dip">

    <TextView
        android:id="@id/error_text"
        style="@style/VKUIText.Deprecated.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:freezesText="true"
        android:gravity="center"
        android:paddingLeft="32.0dip"
        android:paddingRight="32.0dip"
        android:text="?appkitDefaultErrorText"
        android:textColor="@color/subhead_gray"
        android:textSize="16.0dip"
        app:layout_constraintBottom_toTopOf="@id/error_retry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@id/error_retry"
        style="@style/tertiary_button"
        android:layout_width="wrap_content"
        android:layout_height="32.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12.0dip"
        android:ellipsize="end"
        android:fontFamily="@string/font_family_medium"
        android:text="@string/retry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_text" />
</androidx.constraintlayout.widget.ConstraintLayout>