<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/standard_list_item_padding"
    android:layout_marginTop="8.0dip"
    android:layout_marginEnd="@dimen/standard_list_item_padding"
    android:layout_marginBottom="4.0dip">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/achievements_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="@dimen/games_sticker_achievements_banner_corner_radius" />

    <ImageView
        android:id="@id/level_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="end" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            android:text="@string/games_my_achievements"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <TextView
            android:id="@id/unlocked_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"
            android:textColor="#b8ffffff"
            android:textSize="15.0sp" />

        <TextView
            android:id="@id/details"
            style="@style/VKUIButton.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.0dip"
            android:fontFamily="@font/roboto_medium"
            android:minHeight="36.0dip"
            android:text="@string/games_achievements_details"
            android:textSize="15.0sp" />
    </LinearLayout>
</FrameLayout>