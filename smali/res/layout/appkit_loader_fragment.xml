<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/appkit_loader_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.vk.core.view.VKAppBarLayout
        android:id="@id/app_bar_layout"
        style="@style/VKAppBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/appkit_toolbar" />
    </com.vk.core.view.VKAppBarLayout>

    <FrameLayout
        android:id="@id/appkit_loader_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="@string/toolbar_behavior_scrolling">

        <include
            android:id="@id/loading"
            layout="@layout/appkit_loading" />

        <include
            android:id="@id/error"
            layout="@layout/appkit_error"
            android:visibility="gone" />

        <View
            android:id="@id/content_stub"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <com.vk.core.view.AppBarShadowView
        android:id="@id/shadow"
        style="@style/AppBarShadow" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>