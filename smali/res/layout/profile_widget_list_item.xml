<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlight_post">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/post_side_padding"
        android:paddingTop="12.0dip"
        android:paddingRight="@dimen/post_side_padding"
        android:paddingBottom="12.0dip">

        <com.vk.imageloader.view.VKImageView
            android:id="@id/icon"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="top"
            android:layout_marginRight="12.0dip"
            app:roundedCornerRadius="2.0dip" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:minHeight="48.0dip"
            android:orientation="vertical"
            android:paddingRight="4.0dip">

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/font_family_medium"
                android:maxLines="1"
                android:textColor="?text_primary"
                android:textSize="14.0dip" />

            <TextView
                android:id="@id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?text_secondary"
                android:textSize="13.0dip" />

            <TextView
                android:id="@id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:drawablePadding="4.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?text_secondary"
                android:textSize="13.0dip" />

            <TextView
                android:id="@id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:drawablePadding="4.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?text_secondary"
                android:textSize="13.0dip" />

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:ellipsize="end"
                android:lineSpacingExtra="3.0dip"
                android:maxLines="3"
                android:textColor="?text_primary"
                android:textSize="13.0dip" />

            <TextView
                android:id="@id/button"
                style="@style/outline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:ellipsize="end"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@id/separator"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="bottom"
        android:background="?separator_alpha" />
</FrameLayout>