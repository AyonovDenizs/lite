<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_modern_list"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@id/title"
        style="@style/VKUIText.Title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="18.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="10.0dip" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/ic_place"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip" />

                <TextView
                    android:id="@id/address"
                    style="@style/VKUIText.Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="16.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:textColorHighlight="@color/header_blue_opacity40"
                    android:textIsSelectable="true" />
            </FrameLayout>

            <FrameLayout
                android:id="@id/metro_frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/metro_drawable"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip" />

                <TextView
                    android:id="@id/metro"
                    style="@style/VKUIText.Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="16.0dip"
                    android:layout_marginBottom="10.0dip" />
            </FrameLayout>

            <FrameLayout
                android:id="@id/phone_frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/ic_phone"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip" />

                <TextView
                    android:id="@id/phone"
                    style="@style/VKUIText.Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="16.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:textColor="?accent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/ic_recent"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip" />

                <TextView
                    android:id="@id/recent"
                    style="@style/VKUIText.Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="16.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:textColor="?text_subhead" />
            </FrameLayout>

            <LinearLayout
                android:id="@id/time_table"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:orientation="vertical"
                android:paddingStart="56.0dip"
                android:paddingTop="8.0dip"
                android:paddingEnd="16.0dip"
                android:paddingBottom="8.0dip" />

            <TextView
                android:id="@id/create_a_route"
                style="@style/VKUIButton.Secondary.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12.0dip"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:minHeight="44.0dip"
                android:paddingTop="13.0dip"
                android:paddingBottom="12.0dip"
                android:text="@string/create_a_route"
                android:textSize="16.0sp" />

            <TextView
                android:id="@id/taxi"
                style="@style/VKUIButton.Primary.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.0dip"
                android:layout_marginEnd="12.0dip"
                android:layout_marginBottom="12.0dip"
                android:drawablePadding="-22.0dip"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minHeight="44.0dip"
                android:paddingLeft="10.0dip"
                android:text="@string/get_a_taxi"
                android:textSize="16.0sp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</merge>