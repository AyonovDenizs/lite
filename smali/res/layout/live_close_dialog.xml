<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#99000000">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="42.0dip"
        android:elevation="2.0dip"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip"
                android:layout_marginTop="22.0dip"
                android:layout_marginRight="22.0dip"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/live_broadcast_end_title"
                android:textSize="22.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_marginRight="22.0dip"
                android:text="@string/live_broadcast_end_message"
                android:textColor="@color/gray"
                android:textSize="16.0dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="22.0dip"
                android:layout_marginTop="22.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="8.0dip">

                <Button
                    android:id="@id/end_broadcast_alert_view_cancel"
                    style="@style/VKUIButton.Tertiary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/gray"
                    android:textSize="16.0dip" />

                <Button
                    android:id="@id/end_broadcast_alert_view_ok"
                    style="@style/VKUIButton.Tertiary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:text="@string/live_broadcast_end_confirm"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="16.0dip" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>