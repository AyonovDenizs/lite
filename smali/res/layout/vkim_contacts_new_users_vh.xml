<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="176.0sp"
    android:clipToPadding="false"
    android:paddingStart="16.0dip"
    android:paddingTop="8.0dip"
    android:paddingEnd="16.0dip"
    android:paddingBottom="8.0dip">

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_contacts_permissions_border" />

    <com.vk.im.ui.views.avatars.StackAvatarView
        android:id="@id/vkim_avatars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24.0dip"
        app:vkim_drawingOrder="usual"
        app:vkim_extraColor="?placeholder_icon_background"
        app:vkim_iconOffset="-8.0dip"
        app:vkim_iconSize="32.0dip"
        app:vkim_strokeColor="?background_content"
        app:vkim_strokeWidth="2.0dip"
        app:vkim_useExtraView="true" />

    <TextView
        android:id="@id/vkim_new_users_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32.0dip"
        android:layout_marginTop="68.0dip"
        android:layout_marginEnd="32.0dip"
        android:gravity="center"
        android:textColor="?text_primary"
        android:textSize="14.0sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_marginBottom="20.0dip"
        android:background="@drawable/bg_contacts_label"
        android:orientation="horizontal"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip">

        <TextView
            android:id="@id/vkim_content"
            android:layout_width="wrap_content"
            android:layout_height="36.0sp"
            android:fontFamily="@string/fontRobotoMedium"
            android:gravity="center"
            android:textColor="?button_muted_foreground"
            android:textSize="15.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@id/vkim_close_btn"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"
        android:layout_gravity="end"
        android:layout_marginTop="0.0dip"
        android:layout_marginEnd="0.0dip"
        android:contentDescription="@string/vkim_accessibility_close"
        android:padding="12.0dip"
        android:src="@drawable/ic_cancel_20"
        android:tint="?icon_secondary" />
</FrameLayout>