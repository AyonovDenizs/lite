<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/modal_window"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vkim_bg_modul_bottom_sheet"
    android:orientation="vertical"
    android:paddingBottom="20.0dip">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:fontFamily="@string/fontRobotoMedium"
        android:gravity="center_vertical"
        android:minHeight="56.0dip"
        android:text="@string/vkim_delete_delay"
        android:textColor="?text_primary"
        android:textSize="20.0sp" />

    <NumberPicker
        android:id="@id/number_picker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title" />

    <TextView
        android:id="@id/apply_btn"
        style="@style/VkIm.AccentButton"
        android:layout_below="@id/number_picker"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12.0dip"
        android:background="@drawable/vkim_ripple_bg_highlighted"
        android:text="@string/attach_done" />

    <TextView
        android:id="@id/cancel_btn"
        style="@style/VkIm.AccentButton"
        android:layout_below="@id/number_picker"
        android:layout_marginEnd="8.0dip"
        android:layout_toStartOf="@id/apply_btn"
        android:background="@drawable/vkim_ripple_bg_highlighted"
        android:text="@string/cancel" />
</RelativeLayout>