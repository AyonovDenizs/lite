<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.vk.imageloader.view.VKImageView
        android:id="@id/cover"
        android:layout_width="@dimen/story_narrative_cover_width"
        android:layout_height="@dimen/story_narrative_cover_height"
        android:background="@drawable/bg_stories_chapters_card"
        android:paddingStart="24.0dip"
        android:paddingTop="16.0dip"
        android:paddingEnd="24.0dip"
        android:paddingBottom="32.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="8.0dip"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@id/views"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/story_narrative_views_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="Views"
        android:textColor="#bfffffff"
        android:textSize="14.0sp"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cover"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@id/title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="Title"
        android:textColor="#ffffffff"
        android:textSize="@dimen/story_narrative_title_size"
        app:fontFamily="@font/tt_commons_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/views"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@id/author_text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="24.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#bfffffff"
        android:textSize="16.0sp"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintWidth_default="wrap" />
</androidx.constraintlayout.widget.ConstraintLayout>