<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/friend_req_btns_wrap"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="7.5dip">

    <View
        android:id="@id/post_divider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/post_side_padding"
        android:layout_marginRight="@dimen/post_side_padding"
        android:background="?separator_alpha" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:divider="@drawable/card_buttons_divider"
        android:dividerPadding="8.0dip"
        android:paddingLeft="@dimen/post_side_padding_menu"
        android:paddingRight="@dimen/post_side_padding_menu"
        android:showDividers="middle">

        <TextView
            android:id="@id/friend_req_btn_add"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="?control_foreground"
            android:textSize="14.0sp" />

        <TextView
            android:id="@id/friend_req_btn_decline"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:text="@string/group_inv_decline"
            android:textColor="?destructive"
            android:textSize="14.0sp" />
    </LinearLayout>

    <View
        android:id="@id/bottom_divider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/post_side_padding"
        android:layout_marginRight="@dimen/post_side_padding"
        android:background="?separator_alpha"
        android:visibility="gone" />
</LinearLayout>