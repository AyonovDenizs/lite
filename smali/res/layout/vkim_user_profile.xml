<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include
        android:id="@id/im_contact_header"
        layout="@layout/vkim_contact_header" />

    <com.vk.im.ui.views.buttons.TextImageButton
        android:id="@id/im_message"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:background="@drawable/vkim_ripple_dark_borderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_message_outline_28"
        android:text="@string/vkim_contact_message"
        app:layout_constraintEnd_toStartOf="@id/im_phone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_contact_header" />

    <com.vk.im.ui.views.buttons.TextImageButton
        android:id="@id/im_phone"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/vkim_ripple_dark_borderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_phone_28_outline"
        android:text="@string/vkim_contact_phone_call"
        app:layout_constraintBottom_toBottomOf="@id/im_message"
        app:layout_constraintEnd_toStartOf="@id/im_video"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/im_message"
        app:layout_constraintTop_toTopOf="@id/im_message" />

    <com.vk.im.ui.views.buttons.TextImageButton
        android:id="@id/im_video"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/vkim_ripple_dark_borderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_videocam_28_outline"
        android:text="@string/vkim_contact_video_call"
        app:layout_constraintBottom_toBottomOf="@id/im_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/im_phone"
        app:layout_constraintTop_toTopOf="@id/im_message" />

    <Space
        android:id="@id/bottom_space"
        android:layout_width="0.0dip"
        android:layout_height="8.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_message" />
</merge>