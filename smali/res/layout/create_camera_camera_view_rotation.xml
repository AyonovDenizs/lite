<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@id/create_camera_rotation_tip_main_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black_alpha75"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:id="@id/create_camera_rotation_tip_inner_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/create_camera_rotation_tip_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flip_portrait_56"
                android:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/VKUIText.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_marginEnd="32.0dip"
                android:gravity="center"
                android:text="@string/camera_rotate_hint_title"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/create_camera_rotation_tip_subtitle"
                style="@style/VKUIText.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="32.0dip"
                android:paddingEnd="32.0dip"
                android:text="@string/camera_rotate_hint_text"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/create_camera_rotation_tip_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="14.0dip"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/camera_rotate_hint_bottom_text"
        android:textColor="@color/white"
        android:textSize="13.0sp"
        android:textStyle="normal"
        android:visibility="gone" />
</merge>