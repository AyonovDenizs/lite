<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/story_card_width"
    android:layout_height="@dimen/story_card_height"
    android:background="@drawable/highlight_radius_4"
    android:contentDescription="@string/accessibility_open_stories_camera">

    <View
        android:id="@id/story_new_item_click_handler"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:background="@drawable/highlight_radius_4"
        android:importantForAccessibility="no" />

    <ImageView
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16.0dip"
        android:background="@drawable/white_oval"
        android:backgroundTint="?placeholder_icon_background"
        android:scaleType="center"
        android:src="@drawable/ic_add_outline_28"
        android:tint="?icon_outline_medium" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/story_author_title_top_space"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/story"
        android:textColor="?text_placeholder"
        android:textSize="@dimen/story_text_size" />
</FrameLayout>