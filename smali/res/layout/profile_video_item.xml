<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="200.0dip"
        android:layout_height="112.0dip">

        <com.vk.imageloader.view.VKImageView
            android:id="@id/photo"
            android:layout_width="@dimen/profile_section_article_item_width"
            android:layout_height="@dimen/profile_section_article_item_height"
            app:placeholderImage="@drawable/profile_counter_thumb"
            app:roundedCornerRadius="6.0dip" />

        <com.vk.libvideo.ui.VideoRestrictionView
            android:id="@id/profile_video_item_restriction"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            app:vrv_corner_radius="2.0dip" />

        <TextView
            android:id="@id/attach_duration"
            android:layout_width="wrap_content"
            android:layout_height="24.0dip"
            android:layout_gravity="end|bottom|center"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:background="@drawable/bg_video_duration_label"
            android:drawableLeft="@drawable/ic_doc_play"
            android:drawablePadding="4.0dip"
            android:ellipsize="marquee"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center_vertical"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </FrameLayout>

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?text_primary"
        android:textSize="14.0sp" />
</LinearLayout>